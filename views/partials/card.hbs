<div class='card' style='width: 18rem;'>
  {{#if data.title}}
    <a href='/{{context}}/{{data._id}}'><img src='{{data.url}}' class='card-img-top' alt='{{data.title}}' /></a>
    <div class='card-body'>
      <a class='card-title celeb-title' href='/{{context}}/{{data._id}}'>{{data.title}}</a>
    </div>
  {{else}}
    <a href='/{{context}}/{{data._id}}'><img src='{{data.url}}' class='card-img-top' alt='{{data.name}}' /></a>
    <div class='card-body'>
      <a class='card-title celeb-title' href='/{{context}}/{{data._id}}'>{{data.name}}</a>
    </div>
  {{/if}}
  <div class='card-body car-links'>
    <form action='/{{context}}/{{data._id}}/delete' method='POST'>
      <button class='btn btn-outline-secondary' type='submit'>DELETE</button>
    </form>
    <div>
      <a href='/{{context}}/{{data._id}}/edit' class='btn btn-outline-secondary'>EDIT</a>
    </div>
  </div>
</div>
<h1>You can edit this movie</h1>

<form action="/movies/edit/{{movie._id}}" method="POST">
  <label for="title">Title</label>
  <input
    type="text"
    name="title"
    id="title"
    placeholder="{{movie.title}}"
    value="{{movie.title}}"
  />
  <label for="genre">Genre</label>
  <input
    type="text"
    name="genre"
    id="genre"
    placeholder="{{movie.genre}}"
    value="{{movie.genre}}"
  />
  <label for="plot">Plot</label>
  <input
    type="text"
    name="plot"
    id="plot"
    placeholder="{{movie.plot}}"
    value="{{movie.plot}}"
  />

  <label>Cast:</label>
  <select name="cast" multiple>
    {{#each allCelebs}}
      <option selected value="{{this._id}}">{{this.name}}</option>
    {{/each}}
  </select>

  <button>Save changes</button>
</form>
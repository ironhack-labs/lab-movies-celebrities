<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Añade una nueva Película</h1>

            <hr>

            <form action="/movies/new-movies" method="POST">

                <div class="mb-3">
                    <label for="title" class="form-label">Título</label>
                    <input type="text" class="form-control" id="title" name="title">
                </div>
                <div class="mb-3">
                    <label for="genre" class="form-label">Género</label>
                    <input type="text" class="form-control" id="genre" name="genre">
                </div>
                <div class="mb-3">
                    <label for="plot" class="form-label">Plot</label>
                    <input type="text" class="form-control" id="plot" name="plot">
                </div>
                <div class="mb-3">
                    <label for="cast">Cast:</label>
                    <select name="cast" id="cast" multiple>
                        {{#each celebs}}
                        <option value={{id}}>{{this.name}}</option>
                        {{/each}}
                    </select>
                </div>
                <button type="submit" class="btn btn-light">Añadir películas</button>
                <a href="/" class="btn btn-dark">Volver al incio</a>
            </form>


            <hr>


        </div>
    </div>


</div>
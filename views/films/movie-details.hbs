<div class="container">
    <div class="row mt-5">
        <div class="col-md-3">Aqui estar√° la portada</div>
        <div class="col-md-6">
            <h3>{{title}}</h3>
            <p>{{genre}}</p>
            <p>{{plot}}</p>
            <p>Cast:</p>
            <div class="d-flex">
                {{#each cast}}
                <div class="card mr-3" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">{{name}}</h5>
                        <h6 class="card-subtitle mb-2 text-muted">{{ocupation}}</h6>
                        <p class="card-text">{{catchPhrase}}</p>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
    <hr>
    <div class="container d-flex justify-content-between">
        <a class="btn btn-dark mt-3" href="/">Back to Home Page</a>
        <div class="d-flex">
            <a href="/movies/{{id}}/edit" class="btn  btn-dark mt-3 mr-3">Edit</a>
            <form action="/movies/{{_id}}/delete" method="POST">
                <input type="submit" value="Delete" class="btn btn-secondary btn-danger mt-3">
            </form>
        </div>
    </div>
</div>
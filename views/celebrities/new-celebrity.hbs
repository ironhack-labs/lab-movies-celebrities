<div class="container">
  <h2>Create celebrities</h2>
  <hr />

  <div class="row justify-content-center">

    <div class="col-md-6">

      <form action="/celebrities/create" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" class="form-control" id="name" name="name" />
        </div>
        <div class="form-group">
          <label for="occupation">occupation</label>
          <input
            type="text"
            class="form-control"
            id="occupation"
            name="occupation"
          />
        </div>
        <div class="form-group">
          <label for="catchPhrase">catchPhrase</label>
          <input
            type="text"
            class="form-control"
            id="catchPhrase"
            name="catchPhrase"
          />
        </div>
        <button type="submit" class="btn btn-dark btn-block">Create</button>
      </form>
    </div>
  </div>

   {{#if errorMsg}}
            <p id="errorMessage">{{errorMsg}}</p>
            {{/if}}


  <hr />
  <a href="/" class="btn btn-dark">Volver</a>
</div>
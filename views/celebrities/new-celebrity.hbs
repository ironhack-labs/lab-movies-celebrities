<h2>Add a New Celebrity</h2>
<form method="POST" action="/celebrities/create">

    <label> Name:
        <input type="text" name="name">
    </label>

    <label> Occupation:
    
        <select name="occupation">
                {{#each occupationEnum}}
                <option value="{{this}}">{{this}}</option>
                {{/each}}
        </select>
    
    </label>

    <label> Catch Phrase:
        <input type="text" name="catchPhrase">
    </label>

    <button type="submit"> Create </button>

</form>
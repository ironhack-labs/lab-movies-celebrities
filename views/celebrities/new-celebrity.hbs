<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <h2>New Celebrity</h2>

            <hr>

            <form action="/celebrities/create" method="POST">
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="tit" name="name">
                </div>

                <div class="mb-3">
                    <label for="aut" class="form-label">Occupation</label>
                    <input type="occupation" class="form-control" id="aut" name="occupation">
                </div>

                <div class="mb-3">
                    <label for="catchPhrase" class="form-label">Catch Phrase</label>
                    <input type="text" class="form-control" id="desc" name="catchPhrase">
                </div>



                <div class="d-grid">
                    <button type="submit" class="btn btn-dark">Create New Celebrity</button>
                </div>
            </form>

        </div>
    </div>
</div>
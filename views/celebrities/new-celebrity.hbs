<h2>Add a new celebrity</h2>

<form action="/celebrities/create" method="post">

    <label>
        Name
        <input type="text" name="name">
    </label>

    <br><br>

    <label>
        Occupation
        <input type="text" name="occupation">
    </label>

    <br><br>

    <label>
        Catchphrase
        <input type="text" name="catchphrase">
    </label>

    <br><br>

    <button type="submit">Save changes</button>

</form>
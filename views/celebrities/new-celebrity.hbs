<h2>NEW CELEBRITY</h2>
<form action="/celebrities/create" method="post">

        <div>
          <label for="name" class="block text-sm font-medium text-gray-700"> Name</label>
          <div class="mt-1">
            <input id="name" name="name" type="text" autocomplete="email" required class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
          </div>
        </div>
        <div>
          <label for="ocuppation" class="block text-sm font-medium text-gray-700"> Ocuppation</label>
          <div class="mt-1">
            <input id="ocuppation" name="ocuppation" type="text" required class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
          </div>
        </div>
        <div>
          <label for="catchPhrase" class="block text-sm font-medium text-gray-700"> CatchPhrase</label>
          <div class="mt-1">
            <input id="catchPhrase" name="catchPhrase" type="text" required class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
          </div>
        </div>

        <div>
          <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Create</button>
        </div>
        

</form>
<div class="container d-felx flex-row align-items-center">
  <h2 class="text-center fw-bolder pt-5">Add a new celebrity</h2>

  <form
    action="/celebrities/create"
    method="POST"
    class="d-flex flex-row justify-content-center pt-3"
  >
    <div class="col-3 d-inline-flex flex-row px-3 align-items-center">
      <label for="name" class="fw-bolder col-form-label">Name: </label>
      <input type="text" class="form-control" id="name" name="name" />
    </div>
    <div class="col-3 d-inline-flex flex-row px-3 align-items-center">
      <label for="occupation" class="fw-bolder">Occupation: </label>
      <input
        type="text"
        class="form-control"
        id="occupation"
        name="occupation"
      />
    </div>
    <div class="col-3 d-inline-flex flex-row px-3 align-items-center">
      <label for="catchPhrase" class="fw-bolder">CatchPhrase: </label>
      <input
        type="text"
        class="form-control"
        id="catchPhrase"
        name="catchPhrase"
      />

    </div>

    <button type="submit" class="btn btn-primary">Add</button>

  </form>
</div>
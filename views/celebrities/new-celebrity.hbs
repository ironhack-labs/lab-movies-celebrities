<div class="container mt-5">

    <div class="row justify-content-center">
        <div class="col-md-6">

            <h2>New celebrity</h2>

            <hr class="border border-warning">

            <form action="/celebrities/create" method="POST">
                <div class="mb-3">
                    <label for="name" class="form-label">Celebrity name</label>
                    <input type="text" class="form-control" id="name" name="name">
                </div>

                <div class="mb-3">
                    <label for="prop" class="form-label">Celebrity occupation</label>
                    <input type="text" class="form-control" id="prop" name="occupation">
                </div>

                <div class="mb-3">
                    <label for="phrase" class="form-label">Celebrity catch phrase</label>
                    <input type="text" class="form-control" id="phrase" name="catchPhrase">
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-dark">Create celebrity</button>
                </div>
            </form>

        </div>
    </div>


</div>
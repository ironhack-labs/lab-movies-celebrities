<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="mt-5 text-center">CREATE CELEBRITIES</h2>
      <hr class="mt-5 mb-5">

      <form method="POST" action="/celebrities/create">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" class="form-control" id="name" placeholder="Enter Celebrity's name" name="name">
        </div>
        <div class="form-group">
          <label for="occupation">Occupation</label>
          <input type="text" class="form-control" id="occupation" placeholder="Enter occupation" name="occupation">
        </div>
        <div class="form-group">
          <label for="catchPhrase">CatchPhrase</label>
          <input type="text" class="form-control" id="catchPhrase" placeholder="Enter Catch Phrase" name="catchPhrase">
        </div>

        {{#if error}}
        <p id="error">{{error}}</p>
        {{/if}}

        <button type="submit" class="btn btn-dark text-white btn-block">Submit</button>
      </form>
    </div>
  </div>
</div>
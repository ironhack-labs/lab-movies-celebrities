<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2>New celebrity</h2>
            <form action="/celebrities/create" method="post">
                <div class="mb-3">
                    <label for="name" class="form-label">Celebrity name</label>
                    <input type="text" class="form-control" id="name" name="name">
                </div>
                <div class="mb-3">
                    <label for="occupation" class="form-label">Occupation</label>
                    <input type="text" class="form-control" id="occupation" name="occupation">
                </div>
                <div class="mb-3">
                    <label for="cathPhrase" class="form-label">CathPhrase</label>
                    <input type="text" class="form-control" id="cathPhrase" name="cathPhrase">
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-dark">Create new celebrity</button>
                </div>
            </form>
        </div>
    </div>
</div>
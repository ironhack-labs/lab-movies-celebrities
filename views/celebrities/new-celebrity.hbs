{{!-- views/celebrities/new-celebrity.hbs --}}
<h2>Create a Celebrity</h2>
<form action="/celebrities/create" method="POST">
  <input type="text" name="name" required placeholder="Name of the celebrity">
  <input type="text" name="occupation" placeholder="Occupation">
  <input type="text" name="catchPhrase" placeholder="A catch phrase">
  <button type="submit">Create</button>
</form>


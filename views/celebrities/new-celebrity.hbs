{{!-- views/celebrities/new-celebrity.hbs --}}
<a href="/">Go back Home</a>

<h2>Create a Celebrity</h2>

<form action="/celebrities/create" method="POST">
  <label for='name'>Name:</label>
  <input type="text" id="name" name="name" required placeholder="Name of the celebrity">
  <label for='occupation'>Occupation:</label>
  <input type="text" id="occupation" name="occupation" placeholder="Occupation">
  <label for='catchPhrase'>Catch phrase:</label>
  <input type="text" id="catchPhrase" name="catchPhrase" placeholder="A catch phrase">
  <button type="submit">Create</button>
</form>


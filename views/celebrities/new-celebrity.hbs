<section id="new-celeb-container">
    <h2>Create new celebrity</h2>
    <form action="/celebrities/create" method="post">
        <label>
            Name:
            <input type="text" name="name">
        </label>
        <label>
            Occupation:
            <input type="text" name="occupation">
        </label>
        <label>
            Catch phrase:
            <input type="text" name="catchPhrase">
        </label>
        <button type="submit">Create</button>
    </form>

</section>
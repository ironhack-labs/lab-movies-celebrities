<div class="row">
    <div class="col">
    <h2>New Celebrity</h2>
    <form action="/celebrities/create" method="POST">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" name="name" id="name" >
    </div>
    <div class="form-group">
        <label for="occupation">Occupation</label>
        <input type="text" class="form-control" name="occupation" id="occupation" >
    </div>
    <div class="form-group">
    <label for="catchphrase">Catchphrase</label>
    <textarea class="form-control" id="catchphrase" name="catchPhrase" rows="2"></textarea>
    </div>
        <button type="submit" class="btn btn-info mb-2">Save</button>
    </form>
    </div>
</div>
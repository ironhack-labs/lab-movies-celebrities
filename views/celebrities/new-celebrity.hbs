<div class='container'>

  <div class='row justify-content-center'>

    <div class='col-md-8'>

      <h2>New Celebrity</h2>
      <hr />

      <form action='/celebrities/create' method='POST'>

        <div class='mb-3'>
          <label for='field1' class='form-label'>Name</label>
          <input type='text' class='form-control' id='field1' name='name' />
        </div>

        <div class='mb-3'>
          <label for='field2' class='form-label'>Occupation</label>
          <input type='text' class='form-control' id='field2' name='occupation' />
        </div>

        <div class='mb-3'>
          <label for='field3' class='form-label'>Catch Phrase</label>
          <input type='text' class='form-control' id='field3' name='catchPhrase' />
        </div>

        <div class='d-grid'>
          <button type='submit' class='btn btn-dark'>Add New Celebrity</button>
        </div>
      </form>
    </div>
  </div>

</div>
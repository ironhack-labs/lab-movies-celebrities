<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-6">

            <h2>Edit Celebrity</h2>
            <hr>

            <form action="/celebrities/{{_id}}/edit" method="POST">
                <div class="mb-3 mt-5">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" name="name" value="{{name}}">
                </div>

                <div class="mb-3">
                    <label for="occupation" class="form-label">Occupation</label>
                    <input type="text" class="form-control" id="occupation" name="occupation" value="{{occupation}}">
                </div>

                <div class="mb-3 ">
                    <label for="catchPhrase" class="form-label">Catch Phrase</label>
                    <input type="text" class="form-control" id="catchPhrase" name="catchPhrase" value="{{catchPhrase}}">
                </div>

                <button type="submit" class="btn btn-dark">Save</button>
            </form>

        </div>
    </div>

    <hr class="mb-3">
    <a href="/" class="btn btn-dark" alt="Home">Home</a>
    <a href="/celebrities" class="btn btn-info" alt="Back to all movies">Back to celeb list</a>

</div>
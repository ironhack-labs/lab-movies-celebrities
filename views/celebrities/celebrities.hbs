<h1>All celebrities</h1>
<div class="container-md mt-5">
    <div class="row">
        {{#each celebrities}}
        <div class="col-12 col-md-6 col-lg-4 col-xl-3 mb-3">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h2 class="card-title">{{name}}</h2>
                    <p>occupation: {{occupation}}</p>
                    <p>Catch phrase: {{catchPhrase}}</p>
                    <div class="row">
                        <div class="col-6">
                            <a href="/celebrities/{{id}}" class="btn btn-dark btn-sm">Details</a>
                        </div>
                        <div class="col-6">
                            <form action="/celebrities/{{id}}/delete" method="POST">
                                <input type="submit" value="Delete celebrity" class="btn btn-danger btn-sm">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
        <a href="/celebrities/create" class="btn btn-dark btn-lg mt-4">Create celebrity</a>
    </div>
</div>
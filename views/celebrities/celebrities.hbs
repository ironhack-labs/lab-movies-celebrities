<h2>Celebrities</h2>
{{#if errorMessage}}
<div
    style="margin-top: 20px; padding: 5px; color: white; background: red; text-align: center; font-size: .95em">
    {{errorMessage}}</div>
{{/if}}
<div class="container">
    <div class="row">
        {{#each celebrities}}
        <div class="col col-4">

            <div class="card mb-3">

                        <img src="{{image}}" alt="" class="card-img-top">
                        <div class="card-body">

                            <h5 class="card-title">{{name}}</h5>
                            <p class="card-text"><strong>Occupation: </strong> {{occupation}}</p>
                            <p class="card-text">
                                <span class="text-muted"><strong>Catchphrase: </strong>{{catchPhrase}}</span>                                
                            </p>
                            {{!-- <a class="btn btn-primary" href="#">
                                Details on {{name}}
                            </a>
                            <a class="btn btn-warning" href="#">
                                Edit
                            </a> --}}
                        </div>

            </div>   
            
        </div> 
        {{/each}}
    </div>
</div>



<a href="/celebrities/create" class="btn btn-info btn-lg">New Celebrity</a>
<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-8">

            <h2>A to Z official celebrities.</h2>
            <hr>
            <p>Behold humans, these are actual celebrities.</p>

            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Occupation</th>
                        <th scope="col">Catch Phrase</th>
                        {{!-- <th scope="col">Edit</th>
                        <th scope="col">Delete</th> --}}
                    </tr>
                </thead>
                <tbody>

                    {{#each celebrities}}

                    <tr>
                        <td>{{name}}</td>
                        <td>{{occupation}}</td>
                        <td>{{catchPhrase}}</td>
                        {{!-- <td><a href="/celebrities/{{_id}}/edit">Edit</a></td>
                        <td>
                            <form action="/celebrities/{{_id}}/delete" method="POST">
                                <input type="submit" value="Delete">
                            </form>
                        </td> --}}
                    </tr>

                    {{/each}}

                </tbody>
            </table>
        </div>
    </div>

</div>
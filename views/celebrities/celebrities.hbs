<div class="container">

        <h1>All celebrities</h1>

        <hr>

        <ul>
            {{#each celebrities}}
            <li>
                <div class="btnRow">
                    <p>{{name}}</p>
                    <a href="/celebrities/{{id}}" class=" btn btn-dark btn-square-md">Details</a>
                    <a href="/celebrities/{{id}}/edit" class=" btn btn-dark btn-square-md">Edit</a>
                    <form action="/celebrities/{{_id}}/delete" method="POST">
                        <button class="btn btn-sm btn-warning" type="submit">Delete</button>
                    </form>
                </div>
            </li>
            {{/each}}
        </ul>

        <hr>
</div>

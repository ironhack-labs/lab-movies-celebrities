<h2>Celebrities</h2>
<hr>

<div class="row justify-content-center my-3">
    <div class="d-grid col-3">
        <a class="btn btn-warning" href="/celebrities/create" role="button">Create a new celebrity</a>
    </div>
</div>

<div class="row justify-content-center mb-3">


    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Occupation</th>
                <th scope="col">Catch Phrase</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {{#each celebrities}}
            <tr>
                <td>
                    <a href="/celebrities/{{id}}">
                        {{name}}
                    </a>
                </td>
                <td>{{occupation}}</td>
                <td>"{{catchPhrase}}"</td>
                <td>
                    <a href="/celebrities/{{id}}/edit" role="button" class="btn btn-success">Edit</a>
                </td>
                <td>
                    <form action="/celebrities/{{id}}/delete" method="post">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>

            </tr>
            {{/each}}
        </tbody>
    </table>

</div>
<div class="container text-center">
    <h2>Tu lista de celebrities</h2>
    <div class="row">
        <div class="col-2">
            <h3>name</h3>
        </div>
        <div class="col-2">
            <h3>occupation</h3>
        </div>
        <div class="col-2">
            <h3>Catch phrase</h3>
        </div>
        <div class="col-2">

        </div>
        <div class="col-2">

        </div>

    </div>
    <hr>
    {{#each celebrities}}
    <div class="row text-center align-items-center">
        <div class="col-2">
            <p class="mb-0">{{name}}</p>
        </div>
        <div class="col-2">
            <p class="mb-0">{{occupation}}</p>
        </div>
        <div class="col-2">
            <p class="mb-0"> {{catchPhrase}}</p>
        </div>

        <div class="col-2">
            <a class="btn btn-warning" href="/celebrities/{{_id}}/edit" role="button">Edit</a>
        </div>
        <div class="col-2">
            <form action="/celebrities/{{_id}}/delete" method="POST">
                <input type="submit" value="delete" class="btn btn-danger">
            </form>
        </div>
    </div>
    <hr>
    {{/each}}

</div>
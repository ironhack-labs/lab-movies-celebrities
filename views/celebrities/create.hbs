<h1 class="text-center mt-5 mb-4">Celebrity create form</h1>

<form class="container-sm mx-auto" style="max-width: 400px;" action="/celebrities" method="POST">

  <div class="form-group mb-3">
    <label for="name" style="color: #3498db;">Name</label>
    <input type="text" class="form-control" name="name" id="name" placeholder="Name" required>
  </div>

  <div class="form-group mb-3">
    <label for="occupation" style="color: #3498db;">Occupation</label>
    <input type="text" class="form-control" name="occupation" id="occupation" placeholder="Occupation" required>
  </div>

  <div class="form-group mb-3">
    <label for="catchPhrase" style="color: #3498db;">Catch phrase</label>
    <input type="text" class="form-control" name="catchPhrase" id="catchPhrase" placeholder="Catch phrase" required>
  </div>

  <div class="form-group mb-3">
    <label for="image" style="color: #3498db;">Image URL</label>
    <input type="text" class="form-control" name="image" id="image" placeholder="Image URL">
    <small class="form-text text-muted">Provide a URL for the celebrity's image.</small>
  </div>

  <button type="submit" class="btn btn-primary">Create</button>
</form>

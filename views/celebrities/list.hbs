<div class='wrapper'>
	{{#each celebrities}}
		<div class='container'>
			<h2>{{name}}</h2>

			<div>
				<a href='/celebrities/{{_id}}'>Details</a>
				<a href='/celebrities/{{_id}}/edit' class='edit'>Edit</a>
				<form action='/celebrities/{{_id}}/delete' method='POST'>
					<button class='delete'>Delete</button>
				</form>
			</div>
		</div>
	{{/each}}
</div>

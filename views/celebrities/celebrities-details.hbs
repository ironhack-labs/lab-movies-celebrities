<div class="container">

    <h1>Celebrity Details</h1>

    <div class="row">

        <div class="col-md-6">

            <hr>
            <h2>{{name}}</h2>
            <img src="{{image}}" class="card-img-top" alt="...">
            <p><button type="button" class="btn btn-outline-secondary my-2">{{occupation}}</button></p>
            <p class="card-text">Catchphrase: {{catchPhrase}}</p>
            <hr>
            <a href="/celebrities/{{_id}}/edit" class="btn btn-warning">Edit</a>

            <form action="/celebrities/{{_id}}/delete" method="POST" style="display: inline">
                <input type="submit" value="Delete" class="btn btn-danger">
            </form>
        </div>
    </div>

</div>
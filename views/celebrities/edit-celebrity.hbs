<h2>Edit: {{name}}</h2>

<form action= "/celebrities/:id/edit" method="post" class="row g-3">
  <div class="col-md-12">
    <label for="celebName" class="form-label">Name</label>
    <input type="text" class="form-control" name="name" value:"{{name}}">
  </div>
  <div class="col-md-6">
    <label for="occupation" class="form-label">Occupation</label>
    <input type="text" class="form-control" name="occupation" value:"{{occupation}}">
  </div>
  <div class="col-md-6">
    <label for="catchPhrase" class="form-label">Catch Phrase</label>
    <input type="text" class="form-control" name="catchPhrase" value:"{{catchPhrase}}">
  </div>
  <div class="col-12">
    <button type="submit" class="btn btn-primary">Send</button>
  </div>
</form>
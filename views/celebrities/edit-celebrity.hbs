<form method="POST" action="/celebrities/{{id}}/edit">
  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" class="form-control" id="name" placeholder="Enter Celebrity's name" name="name" value="{{name}}">
  </div>
  <div class="form-group">
    <label for="occupation">Occupation</label>
    <input type="text" class="form-control" id="occupation" placeholder="Enter occupation" name="occupation"
      value="{{occupation}}">
  </div>
  <div class="form-group">
    <label for="catchPhrase">CatchPhrase</label>
    <input type="text" class="form-control" id="catchPhrase" placeholder="Enter Catch Phrase" name="catchPhrase"
      value="{{catchPhrase}}">
  </div>

  {{#if error}}
  <p id="error">{{error}}</p>
  {{/if}}

  <button type="submit" class="btn btn-warning btn-block">Submit</button>
</form>
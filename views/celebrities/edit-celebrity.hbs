<div class="row d-flex justify-content-around align-items-baseline">
    <h2 class="mt-5"><strong>Edit: </strong>{{name}}</h2>
    <a class="btn btn-outline-dark mb-3" href="/celebrities">Cancel</a>
</div>

<div class="container justify-content-center">
    <div class="col-12">
        <hr>
    </div>
</div>
<br>

<div class="container d-flex justify-content-center">
    <div class="col-6">
        <form action='/celebrities/{{_id}}' method="POST" autocomplete="off">
            <div class="form-group">
                <label>Name</label>
                <input type="text" class="form-control" name="name" value={{name}}>
            </div>
            <div class="form-group">
                <label>Occupation</label>
                <input type="text" class="form-control" name="occupation" value={{occupation}}>
            </div>
            <div class="form-group">
                <label>Catch Phrase</label>
                <input type="text" class="form-control" name="catchPhrase" value={{catchPhrase}}>
            </div>
            <button type="submit" class="btn btn-dark btn-block">Submit changes</button>
        </form>
    </div>
</div>
<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-8">

            <h1>Editar {{name}}</h1>

            <hr>

            <form action="/celebrities/{{_id}}/edit" method="POST">

                <div class="mb-3">
                    <label for="field1" class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="field1" name="name" value="{{name}}">
                </div>

                <div class="mb-3">
                    <label for="field2" class="form-label">Ocuapción</label>
                    <input type="text" class="form-control" id="field2" name="occupation" value="{{occupation}}">
                </div>


                <div class="mb-3">
                    <label for="field2" class="form-label">Lema</label>
                    <input type="text" class="form-control" id="field2" name="catchPhrase" value="{{catchPhrase}}">
                </div>


                <input type="text" name="celebrity_id" hidden value="{{_id}}">

                <div class="d-grid">
                    <button type="submit" class="btn btn-dark">Guardar edición</button>
                </div>
            </form>
        </div>
    </div>

</div>
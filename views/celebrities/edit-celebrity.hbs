<style>
    body {

        background-color: beige;
    }
</style>


<div class="row justify-content-center text-center mt-3">
    <h2>Edit Celebrity</h2>
    <hr>
    <div class="col-6">
        <form action="/celebrities/{{_id}}/edit" method="POST">
            <div class="row justify-content-center">
                <div class="col-10 mb-4 d-grid">
                    <h4>Name</h4>
                    <input class="btn btn-light" type="text" placeholder="name" value="{{name}}" name="name">
                </div>
                <h4>Occupation</h4>
                <div class="col-10 mb-4 d-grid">
                    <input class="btn btn-light" type="text" placeholder="occupation" value="{{occupation}}"
                        name="occupation">
                </div>
                <h4>Catch Phrase</h4>
                <div class="col-10 mb-4 d-grid">
                    <input class="btn btn-light" type="text" placeholder="Phrase" value="{{catchPhrase}}"
                        name="catchPhrase">
                </div>
                <div class="col-5 d-grid">
                    <button class="btn btn-danger" type=submit>Edit</button>
                </div>


            </div>
        </form>
        <form class="mt-3" action="/celebrities/{{_id}}/delete" method="POST">
            <button class="btn btn-warning" type="submit">Delete</button>
        </form>
    </div>
</div>
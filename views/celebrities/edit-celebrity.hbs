<h2>Edit Celebrity</h2>
<form action="/celebrities/{{celebrity._id}}" method="POST">
  <label for="name">Name:</label>
  <input type="text" id="name" name="name" value="{{celebrity.name}}" required><br>

  <label for="occupation">Occupation:</label>
  <input type="text" id="occupation" name="occupation" value="{{celebrity.occupation}}"  required><br>

  <label for="catchPhrase">Catch Phrase:</label>
  <input type="text" id="catchPhrase" name="catchPhrase" value="{{celebrity.catchPhrase}}"  required><br>

  <button type="submit">Save Changes</button>
</form>







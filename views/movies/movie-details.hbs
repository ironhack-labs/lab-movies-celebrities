<h2>Movie Details</h2>
<div>
    <h6 class="font-weight-bold">Title:</h6>
    <h6>{{movie.title}}</h6>
    <h6 class="font-weight-bold">Genre:</h6>
    <h6>{{movie.genre}}</h6>
    <h6 class="font-weight-bold">Plot:</h6>
    <h6>{{movie.plot}}</h6>
    <h6 class="font-weight-bold">Cast:</h6>
    {{#each movie.cast}}
        <h6>{{name}}</h6>
        <p>Occupation: {{occupation}}, Catch Phrase: {{catchPhrase}}</p>
    {{/each}}
</div>
<div>
    <form action="/movies/{{movie._id}}/delete" method="post">
        <button class="btn btn-danger" type="submit">Delete</button>
    </form>
</div>

<a class="mt-4 btn btn-secondary" href="/movies">Back</a>
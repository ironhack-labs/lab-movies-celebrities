<div>
  <h2>Movie detail</h2>
  {{movie.title}}
  {{movie.genre}}
  {{movie.plot}}
  {{#each movie.cast}}
    {{this.name}}
    {{this.occupation}}
    {{this.catchPhrase}}
  {{/each}}
  <form action="{{movie._id}}/delete" method="POST">
    <button type="submit">Delete</button>
  </form>
  <a href="{{movie._id}}/edit">Edit</a>

</div>
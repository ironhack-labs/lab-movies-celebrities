
<h2>Movie Details:</h2>

<section class='movie-summary'>
  <h4>Title: {{title}}</h4>
  <br />
  <h4>Genre: {{genre}}</h4>
  <br />
  <h4>Plot: {{plot}}</h4>
  <br />
  <h4>Cast: </h4>
  {{#each cast}}
    <ul>
      <li>Name: {{this.name}}</li>
      <li>Occupation: {{this.occupation}}</li>
      <li>Catch Phrase: {{this.catchPhrase}}</li>
    </ul>
  {{/each}}
  <br />
  <form action="/movies/{{_id}}/delete" method="post">
    <button>Delete movie</button>
  </form>
  <form action="/movies/{{_id}}/edit" method="get">
    <button>Edit movie</button>
  </form>
      
</section>

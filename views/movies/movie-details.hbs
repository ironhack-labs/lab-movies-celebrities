<div class="card">
  <div class="card-header">
    <h2>Movie details</h2>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p> {{movie.title}} Â· <em> {{movie.genre}}</em></p>
      <p class="card-text"><small></small></p>
      <footer class="blockquote-footer">
        <h3>Cast</h3>
        {{#each movie.cast as |celebrity|}}
          <p>{{celebrity.name}} | {{celebrity.ocupation}}</p>
          <p><small>"{{celebrity.catchPhrase}}"</small></p>
        {{/each}}
      </footer>
    </blockquote>
    <form action="/movies/{{movie.id}}/delete" method="POST">
      <button class="btn btn-danger" type="submit">Delete</button>
    </form>
  </div>
</div>
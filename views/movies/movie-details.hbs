{{#with viewTitle}}
  <h5>Details about</h5>
  <h2>{{this.title}}</h2>
  <ul>
    {{#each this.cast}}
      <li>
        {{this.name}}
      </li>
    {{/each}}
  </ul>
  <p>{{this.genre}}</p>
  <p>{{this.plot}}</p>

  <br />

  <a href="/movies/{{this.id}}/edit">Edit</a>
  <form action="/movies/{{this.id}}/delete" method="POST">
    <button type="submit">Delete</button>
  </form>

{{/with}}

<br />
<a href="/">Back to Homepage</a>
<h2>Movie Details</h2>
<p>Title: {{movie.title}}</p>
<p>Genre: {{movie.genre}}</p>
<p>Plot: {{movie.plot}}</p>

{{#each movie.cast}}
	<p>Name: {{celebrities.name}}</p>
	<p>Occupation: {{celebrities.occupation}}</p>
	<p>Catch Phrase: {{celebrities.catchPhrase}}</p>
{{/each}}

<form action="/movies/{{movie._id}}/delete" method="post">
  <button type="submit">
    Delete Movie
  </button>
</form>
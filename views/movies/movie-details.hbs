<h2>Movie</h2>
<div>
<span>{{movie.title}}</span>
<span>{{movie.genre}}</span>
<span>{{movie.plot}}</span>
</div>
<div>
{{#each movie.cast}}
  <p>{{name}}</p>
  <p>{{occupation}}</p>
  <p>{{catchPhrase}}</p>
</div>
{{/each}}
<form action="/movies/{{movie._id}}/delete" method="POST">
  <button value="DELETE">Delete</button>
</form>
<form action="/movies/{{movie._id}}/edit" method="GET">
  <button value="EDIT">Edit</button>
</form
<div class="container" data-bs-theme="dark">
    <h2>Movie Details</h2>
    <div class="card">
        <div class="card-header">
            Selected Movie
        </div>
        <div class="card-body">
            <h4 class="card-title">Name: {{movie.title}}</h4>
            <p class="card-text">Genre: {{movie.genre}}</p>
            <p class="card-text">Plot: {{movie.plot}}</p>
            <div>
                <h5>Cast list</h5>
                <div class="container row row-cols-3">
                    {{#each movie.cast}}
                    <div class="card m-1">
                        <div class="card-body">
                            <p class="card-text">Name: {{this.name}}</p>
                            <p class="card-text">Occupation: {{this.occupation}}</p>
                            <pclass="card-text">Catchphrase: {{this.catchPhrase}}</p>
                        </div>
                    </div>
                    {{/each}} 
                </div>
            </div>
            <div class="btn-group mt-3" role="group" aria-label="Basic example">
                <form action="/movies/{{movie._id}}/delete" method="post">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
                <form action="/movies/{{movie._id}}/edit" method="get">
                    <button type="submit" class="btn btn-primary">Edit</button>
                </form>
            </div>       
        </div>
    </div>
</div> 
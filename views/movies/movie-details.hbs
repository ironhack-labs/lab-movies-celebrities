<h2>Movie Details</h2>
    <hr>
    <h3>{{movieDetails.title}}</h3>
    <h6><b>Genre:</b> {{movieDetails.genre}}</p></h6>
    <p><b>Plot Description:</b> {{movieDetails.plot}}</p>
    <hr>

    <h6>Cast:</h6>
    <ul>
        {{#each movieDetails.cast}}
        <li><b>Actor:</b> {{name}}</li>
        <li><b>Occupation:</b> {{occupation}}</li>
        <li><b>Catch Phrase:</b> {{catchPhrase}}</li>
        <hr>
        {{/each}}
    </ul>

    <form action="/movies/{{movieDetails._id}}/delete" method="post">
        <button type="submit">Delete Movie</button>
    </form>
    <a href="/movies/{{movieDetails._id}}/edit">Edit Movie</a>
    <a href="/">Return Home</a>
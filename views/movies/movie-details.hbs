{{! views/movie/movie-details.hbs }}

<h1 class="movieTitle">{{movie.title}}</h1>
<hr />
<p>genre: {{movie.genre}}</p>
<p>plot: {{movie.plot}}</p>
<p>Cast:
  {{#each movie.cast}}
    <a>{{name}} | </a>
  {{/each}}
</p>
<hr />
<a href="/movies">Back</a><hr />
<a href="/movies/{{movie._id}}/edit">Edit {{movie.title}}</a><hr />
<form action="/movies/{{movie._id}}/delete" method="POST">
  <button>Delete {{movie.title}}</button>
</form>
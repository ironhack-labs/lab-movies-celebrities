<h2>{{ movie.title }}</h2>
<p>Genre: {{ movie.genre }}</p>
<p>Plot: {{ movie.plot }}</p>
<p>Cast:</p>
<ul>
  {{#each movie.cast}}
    <li>
      <p>Name: {{ name }}</p>
      <p>Occupation: {{ occupation }}</p>
      <p>Catchphrase: {{ catchPhrase }}</p>
    </li>
  {{/each}}
</ul>

<form action="/movies/{{ movie._id }}/delete" method="POST">
  <button type="submit">Delete Movie</button>
</form>



<a href="/movies/{{ movie._id }}/edit"> 
    <button>Edit this Movie</button>
</a>

<a href="/movies"> 
    <button>Movies</button>
</a>

<a href="/"> 
    <button>Home</button>
</a>
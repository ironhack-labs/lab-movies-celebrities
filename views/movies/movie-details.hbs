<div class="container">

    <h1>Movie Details</h1>

    <div class="row">

        <div class="col-md-6">

            <hr>
            <h2>{{title}}</h2>
            <img src="{{image}}" class="card-img-top" alt="...">
            <p><button type="button" class="btn btn-outline-secondary my-2">{{genre}}</button></p>
            <p class="card-text">Plot: {{plot}}</p>
            <p>Cast:</p>
            <ul>
                {{#each cast}}
                <li>{{name}}</li>
                {{/each}}
            </ul>
            <hr>
            <a href="/movies/{{_id}}/edit" class="btn btn-warning">Edit</a>

            <form action="/movies/{{_id}}/delete" method="POST" style="display: inline">
                <input type="submit" value="Delete" class="btn btn-danger">
            </form>
        </div>
    </div>

</div>
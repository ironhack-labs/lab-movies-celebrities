<div>
    <h2>{{title}}</h2>
    <p>{{genre}}</p>
    <p>{{plot}}</p>
    <div>
        {{#each cast}}
        <div>
            <p>{{name}}</p>
            <p>{{occupation}}</p>
            <p>{{catchPhrase}}</p>

        </div>
        {{/each}}
    </div>
    <form action="/movies/{{_id}}/delete" method="POST">

        <button type="submit" value="delete">delete</button>

    </form>
</div>
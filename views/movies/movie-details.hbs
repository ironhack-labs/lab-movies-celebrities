<h2>{{title}}</h2>

<div>
	<p>Genre: {{genre}}</p>
	<p>Plot: {{plot}}</p>
	<ul>
	{{#each cast}}	
		<li>{{name}}, {{occupation}}, {{catchPhrase}}</li>
	{{/each}}
	</ul>	
</div>

<form action="/movies/{{_id}}/delete" method="post">
<button type="submit" name="delete">Delete this movie</button>
</form>

<form action="/movies/{{_id}}/edit" method="get">
<button type="submit" name="edit">Edit this movie</button>
</form>
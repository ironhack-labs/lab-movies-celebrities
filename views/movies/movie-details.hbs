<h2>{{title}}</h2>
<p>{{genre}}</p>
<p>{{plot}}</p>

<h3>Cast:</h3>
{{#each cast}}
<p>Name: {{name}}</p>
<p>Occupation: {{occupation}}</p>
<p>Catch Phrase: {{catchPhrase}}</p>
{{/each}}

<a href="/movies/{{_id}}/edit">Edit movie</a>

<form action="/movies/{{_id}}/delete" method="post">
    <button type="submit">Delete movie</button>
</form>


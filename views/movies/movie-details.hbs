<div class="container">


    <div class="row">
        <div class="col-md-6">

            <h1>Detalles de {{name}}</h1>

            <hr>

            <p class="fw-bold">Genre: <span class="fw-normal">{{genre}}</span> </p>
            <p class="fw-bold">Plot: <span class="fw-normal">{{plot}}</span> </p>

        </div>

        <div class="col-md-4">
            <h3>Cast</h3>

            {{#each cast}}
            <p> <span class="fw-bold">Name:</span> {{name}}</p>

            <p> <span class="fw-bold">Occupation:</span> {{occupation}}</p>

            <p> <span class="fw-bold">Catch phrase:</span> {{catchPhrase}}</p>
            <hr>
            {{/each}}
        </div>
    </div>

    <form action="/movies/{{_id}}/delete" method="POST" style="display: inline">
        <input type="submit" value="delete" class="btn btn-sm btn-danger">
    </form>

    <a href="/movies/{{_id}}/edit" class="btn btn-sm btn-info">editar</a>


    <a href="/" class="btn btn-dark">Home</a>

</div>
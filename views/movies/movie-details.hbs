<h2>Movie details</h2>

<h4>{{ title }}</h4>

<p>Genre: {{ genre }}</p>
<p>Plot: {{ plot }}</p>
<p>Cast:</p>
{{#each cast}}
    <section>
        <p>Name: {{ name }}</p>
        <p> Occupation: {{ occupation }}</p>
        <p>Catch Phrase: {{ catchPhrase }}</p>
    </section>
{{/each}}

<a href="/movies/{{ id }}/edit">Edit Movie</a>

<form action="/movies/{{ id }}/delete" method="post">
    <button type="submit">Delete</button>
</form>
<div id="movie-details-div">
    <h2>Movie Details</h2>
    <p>Title: {{movie.title}}</p>
    <p>Genre: {{movie.genre}}</p>
    <p>Plot: {{movie.Plot}}</p>
    <h5>Cast:</h5>
    {{#each movie.cast as |celebrity| }}
        <p>Name: {{celebrity.name}}</p>
        <p>Occupation: {{celebrity.occupation}}</p>
        <p>Catch Phrase: {{celebrity.catchPhrase}}</p>
    {{/each}}
    <a class="btn btn-primary" href="/movies/{{movie._id}}/edit">Edit</a>
    <form action="/movies/{{movie._id}}/delete" method="POST">
        <button type="submit" class="btn btn-primary">Delete Movie</button>
    </form>
</div>
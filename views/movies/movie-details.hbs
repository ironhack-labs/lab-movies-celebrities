<div>
    <h1>{{movie.title}}</h1>
    <h4>Genre: {{movie.genre}}</h3>
    <p>Plot: {{movie.plot}}</p>
    <p>Cast:</p>
    <ul>
        {{#each movie.cast}}
        <li>{{name}} | {{occupation}} | "{{catchPhrase}}"</li>
        {{/each}}
    </ul>

    <form action="/movies/{{movie.id}}/delete" method="POST">
        <button>DELETE MOVIE</button>
    </form>
    <form action="/movies/{{movie.id}}/edit">
        <button>EDIT MOVIE</button>
    </form>
</div>

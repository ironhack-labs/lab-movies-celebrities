<h2>Movie details</h2>
{{#with details}}
  <p>Title: {{title}}</p>
  <p>Genre: {{genre}}</p>
  <p>Plot: {{plot}}</p>

  <h5>Cast:</h5>
  {{#each cast}}
    <p>Name: {{name}}</p>
    <p>Occupation: {{occupation}}</p>
    <p>Phrase: {{catchPhrase}} </p>

  {{/each}}

  <form action="/movies/{{_id}}/delete" method="POST">

    <button type="submit"> Delete movie</button>
  </form>

  <a href="/movies/{{_id}}/edit">Edit movie</a>
  <br>
  <a href="/movies">Go back</a>

{{/with}}
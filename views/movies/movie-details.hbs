<h2>Movie Details</h2>

<hr />

<h3>Title:</h3>
<p>{{movie.title}}</p>
<h4>Genre:</h4>
<p>{{movie.genre}}</p>

<p><b>Description:</b></p>
<p>{{movie.plot}}</p>

<p><b>Cast:</b></p>
{{#each movie.cast}}
  <p>{{name}}</p>
  <p>{{occupation}}</p>
  <p>{{catchPhrase}}</p>
{{/each}}
<br>
    <form action="/movies/{{movie._id}}/edit" method="GET">
      <button>Edit</button>
    </form>

<br>
    <form action="/movies/{{movie._id}}/delete" method="POST">
      <button>Delete</button>
    </form>
<hr />
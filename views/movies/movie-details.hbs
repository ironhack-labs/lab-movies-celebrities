<h2>{{movie.title}}</h2>

<hr />
<form action="/movies/{{movie._id}}/delete" method="POST">
  <p>Title: {{movie.title}}</p>
  <p>Genre: {{movie.genre}}</p>
  <p>Plot: {{movie.plot}}</p>
  <hr />

  <h4>Cast Names</h4>

  {{#each movie.cast}}
    <p>Name: {{name}}</p>
    <p>Occupation: {{occupation}}</p>
    <p>Catch Phrase: {{catchPhrase}}</p>
    <hr />
  {{/each}}
  <button>Delete</button>
  <a href="/movies/{{movie._id}}/edit">Edit</a>
</form>

<a href="/movies">Back</a>
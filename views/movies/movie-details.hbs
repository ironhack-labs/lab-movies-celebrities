<div class="container">
    <h2>Movie details</h2>
    <hr>
    <div class="row">
        <div class="col-md-6">
            <p>Title: {{title}}</p>
            <p>Genre: {{genre}}</p>
            <p>Plot: {{plot}}</p>
        </div>
    </div>
</div>

<div class="container">
    <h5>Celebrities:</h5>
    <div class="row">
        <div class="col-6">
            {{#each cast}}
            <p>Name: {{name}}</p>
            <p>Occupation: {{occupation}}</p>
            <p>Phrase: {{catchPhrase}}</p>
            {{/each}}
        </div>
        <form action=" /movies/{{id}}/delete" method="POST" style="display: inline-block">
            <button type="submit" class="btn btn-danger">Delete</button>
        <a class="btn btn-warning" href="/movies/{{id}}/edit" role="button">Edit</a>
        </form>
    </div>
</div>
<h2>Movie details</h2>
<section>
    <h3>Title: {{this.title}}</h3>
    <p>Genre: {{this.genre}}</p>
    <p>Plot: {{this.plot}}</p>
    {{#each this.cast}}
    <div>
        <p>Name: {{this.name}}</p>
        <p>Occupation: {{this.occupation}}</p>
        <p>Catch phrase: {{this.catchPhrase}}</p>
    </div>
    {{/each}}
    <a href="/movies/{{this.id}}/edit">Edit</a>
    <form action="/movies/{{this.id}}/delete" method="POST">
        <button>Delete</button>
    </form>
</section>

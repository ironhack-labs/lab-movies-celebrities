<h2>New Movie</h2>

<form action="/movie/create" method="post">

  <label for="title">Title</label>
  <input type="string" name="title" id="title" />

  <label for="genre">Genre</label>
  <input type="string" name="genre" id="genre" />

  <label for="plot">Plot</label>
  <input type="string" name="plot" id="plot"/>

   <select name="cast" multiple>
      <option disable selected value=""></option>
      {{#each celeb}}
        <option value="{{this._id}}"> {{this.name}} </option>
      {{/each}}
    </select>

  <button type="submit">Submit</button>

</form>
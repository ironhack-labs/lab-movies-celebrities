<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-6">

            <h2>Add Movie</h2>
            <hr>

            <form action="/movies/create" method="POST">
                <div class="mb-3 mt-5">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" id="title" name="title">
                </div>

                <div class="mb-3">
                    <label for="genre" class="form-label">Genre</label>
                    <input type="text" class="form-control" id="genre" name="genre">
                </div>

                <div class="mb-3 ">
                    <label for="plot" class="form-label">Plot</label>
                    <input type="text" class="form-control" id="plot" name="plot">
                </div>

                <div class="mb-3">
                    <label for="cast" class="form-label">Cast</label>
                    <select name="cast" id="cast" multiple>
                        {{#each celebrities}}
                        <option value="{{this._id}}">{{this.name}}</option>
                        {{/each}}
                    </select>

                </div>

                <button type="submit" class="btn btn-dark">Save</button>
            </form>

        </div>
    </div>
    <hr class="mb-3">
    <a href="/" class="btn btn-dark" alt="Home">Home</a>
    <a href="/movies" class="btn btn-info" alt="Back to all movies">Back to all movies</a>

</div>
<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h2>Añade una Pelicula</h2>

            <hr>

            <form action="/movies/add-movie" method="POST">

                <div class="form-group">
                    <label for="title">Titulo</label>
                    <input type="text" class="form-control" name="title" id="title">
                </div>

                <div class="form-group">
                    <label for="genre">Genero</label>
                    <input type="text" class="form-control" name="genre" id="genre">
                </div>
                <div class="form-group">
                    <label for="plot">Argumento</label>
                    <input type="text" class="form-control" name="plot" id="plot">
                </div>
                <div class="form-group">
                    <label for="cast">Casting de actores</label>

                    {{!-- <input type="text" class="form-control" name="cast" id="cast" value="{{ id}}"> --}}



                    <select name="cast" id="cast">

                        {{#each Celebridad}}
                        <option value="{{id}}">{{name}}</option>

                        {{/each}}
                    </select>
                </div>


                <button type="submit" class="btn btn-dark btn-block btn-lg">Añadir</button>

            </form>
            {{#if errorMessage}}
            <div
                style="margin-top: 20px; padding: 5px; color: white; background: red; text-align: center; font-size: .95em">
                {{errorMessage}}
            </div>
            {{/if}}
        </div>

    </div>

</div>
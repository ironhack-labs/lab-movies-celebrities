<h2>Create a New Movie</h2>
<form action="/movies/create" method="post">
    <label for="nameId">title</label>
    <input type="text" name="title" id="nameId">
    <label for="genreId">Genre</label>
    <input type="text" name="genre" id="genreId">
    <label for="plotId">Plot</label>
    <textarea name="plot" id="plotId" cols="40" rows="2">
    </textarea>

    <select name="cast" id="" multiple>
        {{#each allCelebrities}}
        <option value="{{this._id}}">{{this.name}}</option>
        {{/each}}
    </select>

    <button type="submit">Create!</button>
</form>
<div class="row justify-content-center text-center mt-3">
    <h2>New Movie</h2>
    <hr>
    <div class="col-9">
        <form action="/movies/create" method="POST">
            <input type="text" class="form-control mb-3" placeholder="Title" name="title">
            <input type="text" class="form-control mb-3" placeholder="Genre" name="genre">
            <input type="text" class="form-control mb-3" placeholder="Plot" name="plot">
            <select class="form-select mb-3" multiple name="cast">

                {{#each celebrities}}
                <option value="{{_id}}">{{name}}</option>
                {{/each}}

            </select>
            <button class=" btn btn-dark pe-5 ps-5" type="submit">Create</button>
        </form>
    </div>
</div>
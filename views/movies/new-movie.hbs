<h2>New Movie</h2>

<form action="/movies/create" method="post">
  <label>
    Title
    <input type="text" name="title" id="" />
  </label>

  <label>Genre
    <input type="text" name="genre" id="" />
  </label>

  <label>Plot
    <input type="text" name="plot" id="" />
  </label>

  <label>Cast
    <select name="cast" multiple>
      {{#each celebrities}}
        <option value="{{_id}}">{{name}}</option>
      {{/each}}
    </select>
  </label>

  <button type="submit">Send</button>
</form>
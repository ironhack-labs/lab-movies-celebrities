<h2>Create New Movie</h2>

<form method="POST" action="/movies/create">

    <label> Title:
        <input type="text" name="title">
    </label>

      <label> Genre
        <input type="text" name="genre">
    </label>

     <label> Plot
        <input type="text" name="plot">
    </label>

      <label> Cast
        <select name="cast" multiple>
            {{#each celebrities}}
                <option value="celebrity">{{this.name}}</option>
            {{/each}}
        </select>
    </label>

   <button type="submit">Create</button>


</form>
<h2>Create Movie</h2>

<form method="POST" action="/movies/create">

     <label> Title:
        <input type="text" name="title" />
    </label>

    <label> Genre:
        <input type="text" name="genre" />
    </label>

    <label> Cast
  <select name="celebrity" multiple>
      {{#each celeb}}
        <option value={{this._id}}>{{this.name}}</option>
      {{/each}}
    </select>
</label>

    <label> Plot:
        <textarea type="text" name="plot"/> </textarea>
    </label>

    <button type="submit"> Create </button>
</form>
<a href="./movies">Go back</a>

<h2>Create new movie</h2>

<form action="/movies/new-movie" method="post">

  <fieldset>
    <label for="title">
      Title:
    </label>
    <input type="text" name="title" id="title" />
  </fieldset>

  <fieldset>
    <label>
      Genre:
    </label>
    <input type="text" name="genre" id="genre" />
  </fieldset>

  <fieldset>
    <label>
      Plot:
    </label>
    <input type="text" name="plot" id="plot" />
  </fieldset>

  <fieldset>
    <label>
      Cast:
      <select name="cast" id="cast" multiple>
        {{#each celebs}}
          <option value="{{_id}}">{{this.name}}</option>
        {{/each}}
      </select>
    </label>
  </fieldset>

  <button type="submit">Create movie</button>
</form>
<a href="./movies">Go back</a>

<h2>Create new movie</h2>

<form action="/movies/new-movie" method="post">

  <div class="mb-3">
    <fieldset>
      <label for="title" class="form-label">
        Title:
      </label>
      <input type="text" name="title" id="title" class="form-control" />
    </fieldset>
  </div>

  <div class="mb-3">
    <fieldset>
      <label for="genre" class="form-label">
        Genre:
      </label>
      <input type="text" name="genre" id="genre" class="form-control" />
    </fieldset>
  </div>

  <div class="mb-3">
    <fieldset>
      <label for="plot" class="form-label">
        Plot:
      </label>
      <input type="text" name="plot" id="plot" class="form-control" />
    </fieldset>
  </div>

</div>
  <fieldset>
    <label>
      Cast:
      <select
        name="cast"
        id="cast"
        class="form-select"
        multiple
        aria-label="multiple select example"
      >
        {{#each celebs}}
          <option value="{{_id}}">{{this.name}}</option>
        {{/each}}
      </select>
    </label>
  </fieldset>
</div>

  <button type="submit" class="btn btn-outline-success">Create movie</button>
</form>
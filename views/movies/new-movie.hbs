<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-8">

            <h1>New movie page</h1>

            <form action="/movies/create" method="POST">

                <div class="mb-3">
                    <label for="field1" class="form-label">Movie title</label>
                    <input type="text" class="form-control" id="field1" name="title" value="{{title}}">
                </div>

                <div class="mb-3">
                    <label for="field2" class="form-label">Genre</label>
                    <input type="text" class="form-control" id="field2" name="genre" value="{{genre}}">
                </div>

                <div class="mb-3">
                    <label for="field3" class="form-label">Plot</label>
                    <input type="text" class="form-control" id="field3" name="plot" value="{{plot}}">
                </div>

                <div class="mb-3">

                    <label for="field4" class="form-label">Cast</label>

                    <select class="form-select" id="field4" name="author">
                        <option>Select corresponding cast</option>

                        {{#each celebrity}}
                        <option value={{_id}}> {{name}} </option>
                        {{/each}}
                    </select>

                </div>


                <div class="col">

                    <div class="d-grid">
                        <button type="submit" class="btn btn-dark">Add new movie</button>
                    </div>

                </div>

            </form>

        </div>

    </div>

</div>
<h1 class="mt-2">New movie</h1>
 
<form action="/movies/{{movies.id}}" method="POST">
  <div class="mb-3">
    <label for="title" class="form-label">Title</label>
    <input value="{{movies.title}}" type="text" class="form-control" id="title" name="title" required>
  </div>
  <div class="mb-3">
    <label for="cast" class="form-label">Cast</label>
    <select name="cast" multiple>
        {{#each celebrities as |celebrity|}}
            <option value="{{celebrity._id}}">{{celebrity.name}}</option>
        {{/each}} 
    </select>
  </div>

  <div class="mb-3">
    <label for="genre" class="form-label">Genre</label>
    <input value="{{movies.genre}}" type="text" class="form-control" id="genre" name="genre" >
  </div>
  <div class="mb-3">
    <label for="plot" class="form-label">Plot</label>
    <input value="{{movies.plot}}" type="text" class="form-control" id="plot" name="plot" >
  </div>

  
  <button type="submit" class="btn btn-primary">Submit</button>
</form>

<div class="container mt-5">

    <div class="row">

        <div class="col-md-6">
            <h2>Create a New Movie</h2>
            <hr>

            <form action='/movies/create' method="POST">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" id="title" name="title">
                </div>
                <div class="mb-3">
                    <label for="genre" class="form-label">Genre</label>
                    <input type="text" class="form-control" id="genre" name="genre">
                </div>
                <div class="mb-3">
                    <label for="plot" class="form-label">Plot</label>
                    <input type="text" class="form-control" id="plot" name="plot">
                </div>
                <div>
                    <button type="submit" class="btn btn-outline-success">Create a New Movie</button>
                </div>
                <br>
                <label for="cast">Select a cast members:</label>
                <select name="cast" id="cast" multiple>
                    {{#each celebrities}}
                    <option value="{{_id}}">{{name}}</option>
                    {{/each}}
                </select>
            </form>
            <br>

        </div>

    </div>
    <hr>
    <a href='/' class="btn btn-outline-dark">Home</a>

</div>
<div class="container">
	<div class="row justify-content-center">
		<div class="col-md-6">
			<h2 class="mt-5 text-center">CREATE</h2>
			<hr class="mt-5 mb-5">


			<form method="POST" action="/movies/create">

				<div class="form-group">
					<label for="title">Title</label>
					<input type="text" class="form-control" id="title" placeholder="Enter Movie's title" name="title"
						value="{{movie.title}}">
				</div>

				<div class="form-group">
					<label for="genre">Genre</label>
					<input type="text" class="form-control" id="genre" placeholder="Enter Movie's genre" name="genre"
						value="{{movie.genre}}">
				</div>

				<div class="form-group">
					<label for="plot">Plot</label>
					<input type="text" class="form-control" id="plot" placeholder="Enter plot" name="plot"
						value="{{movie.plot}}">
				</div>

				<div class="form-group">
					<label for="cast">
						<select class="custom-select w-100" name="cast" id="cast" multiple>
							<option value="" disabled selected>Choose a celebrity</option>
							{{#each celebrities}}
							<option value='{{id}}'>{{this.name}}</option>
							{{/each}}
						</select>
					</label>
				</div>
				{{#if error}}
				<p id="error">{{error}}</p>
				{{/if}}
				<button type="submit" class="btn btn-dark btn-block">CREATE</button>

		</div>
	</div>
</div>


</form>
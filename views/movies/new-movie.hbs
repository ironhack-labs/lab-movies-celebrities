<h2>Create a Movie</h2>

<form action="/movies/create" method="POST">
  <input type="text" name="title" placeholder="Title of the movie" required>
  <input type="text" name="genre"  placeholder="Genre">
  <input type="text" name="plot" placeholder="Plot">
  {{!-- <input type="text" name="cast"> --}}
  <select name="cast" id="">
    <option disable selected value=""></option>  {{!-- without selected any option /first option empty --}}
    {{#each celebritiesArr}}  {{!--All the celebrities from the Model "Celebrity" and collection: celebrities --}}
      <option value="{{this._id}}">{{this.name}}</option>{{!--From the collection--> celebrities --}}
    {{/each}}
  </select>
  
  <button type="submit">Create</button>
</form>



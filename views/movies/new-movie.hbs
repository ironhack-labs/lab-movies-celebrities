<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Create new movie</h1>

            <hr>

            <form action="/movies/create" method="POST">

                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" id="title" name="title">
                </div>
                <div class="mb-3">
                    <label for="genre" class="form-label">Genre</label>
                    <input type="text" class="form-control" id="genre" name="genre">
                </div>
                <div class="mb-3">
                    <label for="plot" class="form-label">Plot</label>
                    <input type="text" class="form-control" id="plot" name="plot">
                </div>
                <div class="mb-3">
                    <label for="cast" class="form-label">Cast</label>
                    <input type="text" class="form-control" id="cast" name="cast">
                </div>
                {{#each celebrities}}
                <div class="mb-3">
                    <label for="cast" class="form-label">Cast</label>
                    <select name="cast" class="form-select" multiple>
                        {{#each newCelebrity}}
                        <option value={{id}}>{{name}}</option>
                        {{/each}}
                    </select>
                </div>
                {{/each}}
                <button type="submit" class="btn btn-dark">Create new movie</button>
                <a href="/" class="btn btn-dark">Home</a>
            </form>

            <hr>

        </div>
    </div>
</div>
<h2>Creating a New Movie

</h2>

<form method="POST" action="/movies/create">
    <label> Title
        <input type="text" name="title" />
    </label>
    <br>
    <label> Genre
        <input type="text" name="genre" />
    </label>
    <br>
    <label> Plot
        <input type="text" name="plot" />
    </label>
    <br>
        <label>Cast:</label>
        
        <select name="cast" multiple>
            {{#each celebrities }}
            <option < value="{{this._id}}"> {{this.name}}</option>
            {{/each}}
        </select>
    <br>
    <div>
        <button type="submit">
            Submit
        </button>
    </div>
</form>
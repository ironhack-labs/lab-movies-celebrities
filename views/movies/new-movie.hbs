<div class="formGeneral">

    <div class="container">

        <div class="row justify-content-center">
            <div class="col-md-6">
                <h2>New Movie</h2>

                <hr>

                <form action="/movies/create" method="POST">

                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" class="form-control" id="title" name="title">
                    </div>
                    <div class="mb-3">
                        <label for="genre" class="form-label">Genre</label>
                        <input type="text" class="form-control" id="genre" name="genre">
                    </div>
                    <div class="mb-3">
                        <label for="plot" class="form-label">Plot</label>
                        <input type="text" class="form-control" id="plot" name="plot">
                    </div>

                    <div class="mb-3">
                        <label for="cast" class="form-label">Choose cast</label>
                        <select name="cast" class="form-select" multiple>
                            {{#each celebrities}}
                            <option value="{{id}}">{{name}}</option>
                            {{/each}}
                        </select>
                    </div>


                    <button type="submit" class="btn btn-dark">Create movie</button>
                    <a href="/" class="btn btn-dark">Back to home</a>
                </form>


                <hr>


            </div>
        </div>


    </div>
</div>
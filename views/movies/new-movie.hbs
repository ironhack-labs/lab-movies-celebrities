<h2>Create Movie</h2>

<form method="post" action="/movies/create">
    <label> Name of Movie :
        <input type="text" name="title">
    </label>
    <label> Genre :
        <input type="text" name="genre">
    </label>
    <label> Plot :
        <input type="text" name="plot">
    </label>

    <label> Cast :
        <select name="cast">        
            {{#each celebritiesFromDB}}
                <option value="{{this._id}}">
                    {{this.name}}
                </option>
        {{/each}}
    </select>
    </label>
    <button type="submit"> Create </button>
</form>
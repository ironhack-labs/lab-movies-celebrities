<h2>New Movie</h2>
<hr>
<br>
<form action="/movies/create" method="POST">
  <label> Title:
    <input type="text" name="title" />
  </label>
  <label> Genre:
    <input type="text" name="genre" />
  </label>
    <label> Plot:
    <input type="text" name="plot" />
  </label>
  <label> Cast:
    <select name="cast">
      {{#each celebrity}}
      <option value="{{this._id}}">{{this.name}}</option>
      {{/each}}
    </select>
  </label>
  <button type="submit"> Create </button>
</form>
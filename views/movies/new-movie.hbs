<div class='container'>

  <div class='row justify-content-center'>

    <div class='col-md-8'>

      <h2>Add New Movie</h2>
      <hr />

      <form action='/movies/create' method='POST'>

        <div class='mb-3'>
          <label for='field1' class='form-label'>Title</label>
          <input type='text' class='form-control' id='field1' name='title' />
        </div>

        <div class='mb-3'>
          <label for='field2' class='form-label'>Genre</label>
          <input type='text' class='form-control' id='field2' name='genre' />
        </div>

        <div class='mb-3'>
          <label for='field3' class='form-label'>Plot</label>
          <input type='text' class='form-control' id='field3' name='plot' />
        </div>

        <div class='mb-3'>
          <label for='field4' class='form-label'>Cast</label>
          <select class='form-select' multiple id='field4' name='cast'>
            {{#each celebrities}}
              <option value='{{_id}}'>{{name}}</option>
            {{/each}}
          </select>
        </div>

        <div class='d-grid'>
          <button type='submit' class='btn btn-dark'>Add New Movie</button>
        </div>
      </form>
    </div>
  </div>

</div>
<h2>Add a new Movie</h2>

<form action="/movies/create" method="post">
  <label>Title:
    <input type="text" name="title">
  </label>
  
  <label>genre:
    <input type="text" name="genre">
  </label>

  <label>Plot:
    <input type="text" name="plot">
  </label>

  <label>Cast:
    <select name="cast" multiple size='3'>
      {{#each celebrity}}
      <option value="{{_id}}">{{name}}</option>
      {{/each}}
    </select>
  </label>

  <button>Add</button>
</form>

<a href="/">Home</a>
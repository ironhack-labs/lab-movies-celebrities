<div class="newMovie">


    <form action="/movies/create" method="POST">

        <label for="title">Title</label>
        <input type="text" id="title" name="title">

        <label for="genre">Genre</label>
        <input type="string" id="genre" name="genre">

        <label for="plot">Plot</label>
        <input type="string" id="plot" name="plot" class="plotInput">

        <div class="mb-3">
            <label for="cast" class="form-label">Cast</label>
            <select name="cast" class="form-select" multiple>
                {{#each celebrity}}

                <option value={{id}}>{{name}}</option>

                {{/each}}
            </select>


        </div>

        <button type="submit" class="btn btn-dark">New movie</button>
        <hr>



    </form>

</div>
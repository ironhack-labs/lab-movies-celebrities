<div class="new-movie">
  <a href="/" class="backButton">Back</a>
  <h2>New Movie</h2>
  <hr />
  <form action="/movies/create" method="POST">
    <label>
      Title:
      <input type="text" name="title" />

    </label>

    <label>
      Genre:
      <input type="text" name="genre" />

    </label>

    <label>
      Plot:
      <input type="text" name="plot" />

    </label>

    <select name="cast" multiple>
      Celebrity:
      {{#each celebs}}
        <option value="{{id}}">{{name}} - {{cast}}</option>
      {{/each}}
    </select>

    <input type="submit" />

  </form>
</div>
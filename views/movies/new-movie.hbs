<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2>Add a new Movie</h2>
            <hr>
            <form action="/movies/create" method="POST">
                <div class="form-group">
                    <label for="celebrity-name">Title</label>
                    <input type="text" name="name" id="celebrity-name">
                </div>
                <div class="form-group">
                    <label for="occupation">Genre</label>
                    <input type="text" name="occupation" id="occupation">
                </div>
                <div class="form-group">
                    <label for="catch">Catch plot</label>
                    <input type="text" name="catchPhrase" id="catch">
                </div>
                <div class="form-group">
                    <label for="cast">Cast</label>
                    <select name="cast" id="cast">
                        {{#each celebrities}}
                        <option value={{id}}> {{name}} </option>
                        {{/each}}
                    </select>
                </div>
                <button type="submit" class="col-12 btn btn-secondary">Create</button>
            </form>
            <hr>
            <a href="/" class="btn btn-dark">Volver</a>
            <p class="error">{{errorMessage}}</p>
        </div>
    </div>

</div>
<h2>Create a movie</h2>
<form class='new-item' action='/movies/create' method='post'>
  <label>
    Title:
    <input type='text' name='title' />
  </label>
  <label>Genre:
    <input type='text' name='genre' />
  </label>
  <label>Plot:
    <textarea name='catchPhrase'></textarea>
  </label>
  <label>Cast:
    <select name='cast' multiple>
      {{#each celebsArr}}
        <option value={{id}}>{{name}}</option>
      {{/each}}
    </select>
  </label>
  {{#if error}}
    <p class='errorMessage'>{{error}}</p>
  {{/if}}
  <button class='button'>Submit</button>
  <a class='back-link' href='/'>&lt;&lt; Home</a>
</form>
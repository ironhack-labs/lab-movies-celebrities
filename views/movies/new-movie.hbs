<div class="form">
    <h2>Create a New Movie</h2>
<form action="/movies/create" method="post">
<label for="title">Enter Movie Title</label>
<input type="text" name="title">
<label for="genre">Enter Genre of Movie</label>
<input type="text" name="genre">
<label for="plot">Describe plot of movie</label>
<input type="text" name="plot">

<label for="cast">Select Cast</label>
 <select name="cast" id="cast" multiple>
        {{#each allCelebrities}}
            <option value="{{this._id}}">{{this.name}}</option>
        {{/each}}
     </select>
<button class="button" type="submit">Create New Movie</button>
</form> 
</div>


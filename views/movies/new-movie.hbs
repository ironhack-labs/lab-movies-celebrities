<h1>Create a new film</h1>

<form action="/movies/create" method="POST">

    <label> Title:
        <input type="text" name="title">
    </label>

    <label> Genre:
        <input type="text" name="genre">
    </label>

    <label> Plot:
        <input type="text" name="plot">
    </label>

    <label> Cast:
        <select name="cast" id="cast">

            {{#each celebrities}}
            <option value="{{id}}">{{name}}</option>
            {{/each}}

        </select>
    </label>

    <button type="submit"> Create a film</button>

</form>
<h2>Create a new movie</h2>

<form action="/movies/create" method="POST" class="row g-3">
    <div class="col-md-6">
        <label for="title" class="form-label">Title</label>
        <input type="string" class="form-control" id="title" name="title">
    </div>
    <div class="col-md-6">
        <label for="genre" class="form-label">Genre</label>
        <input type="string" class="form-control" id="genre" name="genre">
    </div>
    <div class="col-md-12">
        <label for="plot" class="form-label">Plot</label>
        <input type="string" class="form-control" id="plot" name="plot">
    </div>
    <label for="cast" class="form-label">Cast (Select multiple):</label>
    <select id="cast" class="form-select" size="4" name="cast" multiple>
        {{#each celebrities}}
        <option value="{{id}}">{{name}}</option>
        {{/each}}
    </select>
    <div class="col-12">
        <button type="submit" class="btn btn-warning mt-3">Create</button>
    </div>
</form>
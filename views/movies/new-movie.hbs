<h2>Add a new movie</h2>

<form action="/movies/create" method="post">

  <label for="title">Title of the movie:</label>
  <input type="text" name="title" id="title" />

  <label for="genre">Genre of the movie:</label>
  <input type="text" name="genre" id="genre" />

  <label for="plot">Plot of the movie:</label>
  <input type="text" name="plot" id="plot" />
  <br />
  <label for="cast">Select cast:</label>
  <select name="cast" id="cast" multiple class="chosen-selected">
    {{#each celebrity}}
      <option value="{{this._id}}">{{this.name}}</option>
    {{/each}}
  </select>
  <br />
  <button type="submit">Add Movie</button>
</form>
<h1>Create movie</h1>

<form action="/movies" method="POST">
  <label for="title">Title</label>
  <input type="text" name="title" id="title" placeholder="Movie title">
  <label for="genre">Genre</label>
  <input type="text" name="genre" id="genre" placeholder="Movie genre">
  <label for="plot">Plot</label>
  <input type="text" name="plot" id="plot" placeholder="Movie plot">
  <button type="submit">Create</button>
  <select name="cast" id="cast" multiple>
    {{#each celebrities as |celebrity|}}
      <option value="{{celebrity._id}}">{{celebrity.name}}</option>
    {{/each}}
  </select>
</form>

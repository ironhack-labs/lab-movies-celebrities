<h2>Movie Detail</h2>

<h3>{{title}}</h3>
<p>{{genre}}</p>
<p>{{plot}}</p>

<ul>
  {{#each cast}}
    <li>
      <p>{{name}} - {{occupation}} - {{catchPhrase}}</p>
    </li>
  {{/each}}
</ul>

<form action="/movies/{{_id}}/delete" method="POST">
  <button type="submit">Delete</button>
</form>

<a href="/movies/{{_id}}/edit">Edit</a>
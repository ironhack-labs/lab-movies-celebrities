<h2>Edit movie</h2>

<form action="/movies/{{movie._id}}/edit" method="post">
<label for="title">Title</label>
<input type="text" name="title" id="title" value="{{movie.title}}">
<br>
<label for="genre">Genre</label>
<input type="text" name="genre" id="genre" value="{{movie.genre}}">
<br>
<label for="plot">Plot</label>
<input type="text" name="plot" id="plot" value="{{movie.plot}}">
<br>
<label for="cast">Cast:</label>
<select name="cast" id="cast" multiple>
    {{#each celebrities as |celebrity|}}
    <option value="{{celebrity._id}}">{{celebrity.name}}</option>
    {{/each}}
</select>
<br>
<button type="submit">Edit it</button>

</form>
<h2>EDIT MOVIE INFORMATION</h2>

<form action="/movies/edit/{{movie.id}}" method="POST">
    <label for="title">Title</label>
    <input type="text" id="title" name="title" value="{{movie.title}}" required>
    <label for="genre">Genre</label>
    <input type="text" id="genre" name="genre" value="{{movie.genre}}" required>
    <label for="plot">Plot</label>
    <input type="text" id="plot" name="plot" value="{{movie.plot}}" required>

    <label for="cast">Select cast members:</label>
    <select name="cast" multiple>
        {{#each celebrities as |celebrity|}}
            <option value="{{celebrity._id}}">{{celebrity.name}}</option>
        {{/each}} 
    </select>

    <button type="submit">Edit movie!</button>
</form>
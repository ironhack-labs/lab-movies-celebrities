<head>
  <link rel="stylesheet" href="/stylesheets/forms.css" />
</head>

<nav class="nav-bar">
  <a class="home-link nav-links" href="/">Homepage</a>
  <a class="movie-details-link nav-links" href="/movies/{{movie._id}}">Movie
    details</a>
  <a class="celebrities-list-link nav-links" href="/celebrities">List of
    Celebrities</a>
  <a class="movies-list-link nav-links" href="/movies">List of Movies</a>
</nav>

<main>
  <h2>{{movie.title}}</h2>

  <form action="/movies/{{movie._id}}/edit" method="post">

    <label for="title">Title of the movie:</label>
    <input type="text" name="title" id="title" value="{{movie.title}}" />

    <label for="genre">Genre of the movie:</label>
    <input type="text" name="genre" id="genre" value="{{movie.genre}}" />

    <label for="plot">Plot of the movie:</label>
    <input type="text" name="plot" id="plot" value="{{movie.plot}}" />
    <br />
    <label for="cast">Select cast:</label>
    <select
      value="{{movie.cast}}"
      name="cast"
      id="cast"
      multiple
      class="chosen-selected"
    >
      {{#each celebrity}}
        <option value="{{this._id}}">{{this.name}}</option>
      {{/each}}
    </select>
    <br />
    <button class="button" type="submit">Update Movie</button>
  </form>
</main>
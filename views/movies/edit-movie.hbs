<section>
    <h2>{{movieDetails.title}}</h2>

<form action="/movies/{{movieDetails._id}}/edit" method="post">
    <label> Title:
        <input type="text" name="title" value="{{movieDetails.title}}" />
    </label>

    <label> Genre:
        <input type="text" name="genre" value="{{movieDetails.genre}}"/>
    </label>

    <label> Plot:
        <input type="text" name="plot" value="{{movieDetails.plot}}" />
    </label>

    <label> Cast:
        <select name="cast" multiple>
            {{#each celebrityFromDb}}
            <option value="{{this._id}}" >{{this.name}}</option>
            {{/each}}
        </select>
    </label>

    <button type="submit"> Update </button>
</form>

    

</section>
<a href="/movies/{{this._id}}/edit">Edit Movie</a> | <a href="/movies">Back</a>
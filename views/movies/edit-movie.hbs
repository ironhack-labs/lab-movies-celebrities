<div class="new-movie">

  <a href="/" class="backButton">Back</a>
  <h2>Edit movie</h2>
  <hr />
  <form action="/movies/{{movie._id}}" method="POST">

    <input type="text" name="title" class="largeTitle" value="{{movie.title}}" />
    <input type="text" name="genre" value="{{movie.genre}}" />
    <input type="text" name="plot" value="{{movie.plot}}" />
    <select name="cast">
      {{#each celebs}}
        <option value="{{id}}">{{name}} - {{cast}}</option>
      {{/each}}
    </select>
    <input type="submit" />

  </form>
</div>
<h1>Edit Movie</h1>

<div class="new-form">
<form action="/movies/{{eachMovie._id}}" method="POST">

<div class="form-group">
    <label class="form-label" for="title">Title</label>
    <input class="form-input" type="text" name="title" value="{{eachMovie.title}}">
</div>

<div class="form-group">
    <label class="form-label" for="genre">Genre</label>
    <input class="form-input" type="text" name="genre" value="{{eachMovie.genre}}">
</div>

<div class="form-group">
    <label class="form-label" for="plot">Plot</label>
    <input class="form-input" type="text" name="plot" value="{{eachMovie.plot}}">
</div>

<div class="form-group">
    <label class="form-label" for="cast">Cast</label>
    <select class="form-select" multiple name="cast" >
        {{#each celebrities}}
            <option value="{{this._id}}">{{this.name}}</option>
        {{/each}}
    </select>
</div>

<button type="submit" class="form-submit">Submit changes</button>

</form>

</div>
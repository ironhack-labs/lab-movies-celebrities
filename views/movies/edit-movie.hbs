
<div>
  <form action="/movies/{{movie._id}}/edit" method="post">
    <label>
      Title
      <input type="text" name="title" value="{{movie.title}}" />
    </label>
    <label>
      Genre
      <input type="text" name="genre" value="{{movie.genre}}" />
    </label>
    <label>
      Plot
      <input type="text" name="plot" value="{{movie.plot}}" />
    </label>
    <label>
      Cast
      <select name="cast" id="" multiple value="{{movie.cast}}">
        <option value="0">Choose one</option>
        {{#each celebrities}}
          <option value="{{_id}}">{{name}}</option>
        {{/each}}
      </select>
    </label>
    <button type="submit">submit</button>
  </form>
</div>
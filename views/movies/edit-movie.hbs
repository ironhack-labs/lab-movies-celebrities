
<h2></h2>

<form action="/movies/{{movie._id}}/edit" method="post">
    <label>title: <input name="title" type="text" value="{{movie.title}}"></label>
    <label>genre: <input name="genre" type="text" value="{{movie.genre}}"></label>
    <label>plot: <input name="plot" type="text" value="{{movie.plot}}"></label>
    <label>cast: <select name="cast" multiple >
    {{#each celebrities}}
        <option value="{{_id}}" {{#ifIn _id ../movie.cast }} selected="true" {{/ifIn}}>{{name}}</option>
    {{/each}}
    </select></label>
    <button type="submit">Edit</button>
</form>
<h2>Edit Movie</h2>
<form action="/movies/{{movieDetails._id}}" method="post">
    <label for="title">Title</label>
    <input type="text" name="title" id="title" value="{{movieDetails.title}}">

    <label for="genre">Genre</label>
    <input type="text" name="genre" id="genre" value="{{movieDetails.genre}}">

    <label for="plot">Plot</label>
    <input type="text" name="plot" id="plot" value="{{movieDetails.plot}}">

    <select name="cast" id="cast" multiple>
        {{#each celebrities}}
        <option value="{{_id}}">{{name}}</option>
        {{/each}}
    </select>

    <button type="submit">Change Movie</button>

</form>
<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-8">

            <h1>Editar {{movie.name}}</h1>
            <hr>


            <form action="/movies/{{movie.id}}/edit" method="POST">
                <div class="mb-3 mt-5">
                    <label for="movieName" class="form-label">Name</label>
                    <input type="text" class="form-control" id="movieName" name="name" value="{{movie.name}}">
                </div>

                <div class="mb-3">
                    <label for="movieGenre" class="form-label">Genre</label>
                    <input type="text" class="form-control" id="movieGenre" name="genre" value="{{movie.genre}}">
                </div>

                <div class="mb-3 ">
                    <label for="moviePlot" class="form-label">Plot</label>
                    <input type="text" class="form-control" id="moviePlot" name="plot" value="{{movie.plot}}">
                </div>

                <div class="mb-3">
                    <label for="movieCast" class="form-label">Cast:</label>
                    <select class="form-select" multiple name="cast">
                        {{#each celebrities}}
                        <option value="{{id}}">{{name}}</option>
                        {{/each}}
                    </select>
                </div>

                <button type="submit" class="btn btn-dark">Save edition</button>
            </form>

        </div>
    </div>



</div>
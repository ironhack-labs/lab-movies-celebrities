<h2>Edit Movie</h2>
<hr>
</br>
<form action="/movies/{{data.id}}/edit" method="POST">

    <label>
        Title
        <input type="text" name="title" value="{{data.title}}">
    </label>
    </br>

    <label>
        Genre
        <input type="text" name="genre" value="{{data.genre}}">
    </label>
    </br>

    <label>
        Plot
        <input type="text" name="plot" value="{{data.plot}}">
    </label>
    </br>

  <label>Cast</label>
    <select name="cast" multiple>
        {{#each celebrities}}
        <option value="{{_id}}">{{name}}</option>
        {{/each}}
    </select>

  </br>

  <input type="submit" value="Edit Movie">
</form>
</br>
<a href="/">Back</a>
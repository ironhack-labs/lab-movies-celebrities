<h2>Edit Movie</h2>

<form action="/movies/{{movie._id}}/edit" method="POST">
  <label for="title">Title:</label>
  <input type="text" id="title" name="title" value="{{movie.title}}"><br>

  <label for="genre">Genre:</label>
  <input type="text" id="genre" name="genre" value="{{movie.genre}}"><br>

  <label for="plot">Plot:</label>
  <input type="text" id="plot" name="plot" value="{{movie.plot}}"><br>

  <label for="cast">Cast:</label>
  <select id="cast" name="cast" multiple>
    {{#each celebrities}}
      <option value="{{this._id}}" {{#if movie.cast.includes this._id}}selected{{/if}}>
        {{this.name}}
      </option>
    {{/each}}
  </select><br>

  <button type="submit">Update Movie</button>
</form>

<div class="container mt-5">

    <div class="row">
        <div class="col-md-6">
            <h1>Edit Movie</h1>
            <hr>

            <form action="/movies/{{_id}}/edit" method="POST">

                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" id="title" name="title" value="{{title}}" />
                </div>

                <div class="mb-3">
                    <label for="genre" class="form-label">Genre</label>
                    <input type="text" class="form-control" id="genre" name="genre" value="{{genre}}" />
                </div>

                <div class="mb-3">
                    <div class="form-group">
                        <label for="plot" class="form-label">Plot</label>
                        <textarea class="form-control" id="plot" name="plot" rows="5">{{plot}}</textarea>
                    </div>
                </div>
                <hr>
                <div class="mb-3" id="myForm">
                    <label for="cast">Select a cast members:</label>
                    <select name="cast" id="cast" multiple>
                        {{#each cast}}
                        <option value="{{_id}}">{{name}}</option>
                        {{/each}}
                    </select>
                </div>
                <button type="submit" value="edit" class="btn btn-outline-warning">Edit</button>

            </form>
        </div>
    </div>

</div>
<h2>Edit Movie</h2>

<form action="/movies/edit-movie" method="POST">
    <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" class="form-control" id="title" name="title">
    </div>
    <div class="mb-3">
        <label for="genre" class="form-label">Genre</label>
        <input type="text" class="form-control" id="genre" name="genre">
    </div>
    <div class="mb-3">
        <label for="plot" class="form-label">Plot</label>
        <input type="text" class="form-control" id="plot" name="plot">
    </div>
    <div class="mb-3">
        <label for="cast" class="form-label">Cast</label>
        <select class="form-select" name="cast" id="cast">
            {{#each celebrityArr}}
            <option value="{{_id}}">{{name}}</option>

            {{/each}}

        </select>
    </div>





    <div class="d-grid">
        <button type="submit" class="btn btn-dark">Create Movie</button>
        <a class="btn btn-outline-danger" href="/" role="button">Volver a inicio</a>
    </div>

</form>
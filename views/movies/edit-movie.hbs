<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <h1>Update {{title}}</h1>

            <hr>

            <form action="/movies{{movie._id}}" method="POST">
                <div class="mb-3">
                    <label for="genre" class="form-label"><Title></Title></label>
                    <input type="text" class="form-control" id="genre" name="genre" value="{{movie.title}}">
                </div>

                <div class="mb-3">
                    <label for="genre" class="form-label">Genre</label>
                    <input type="text" class="form-control" id="genre" name="genre" value="{{movie.genre}}">
                </div>

                <div class="mb-3">
                    <label for="plot" class="form-label">Plot</label>
                    <input type="text" class="form-control" id="plot" name="plot" value="{{movie.plot}}">
                </div>

                <div class="mb-3">
                    <label for="sel" class="form-label">Cast</label>
                    <select multiple id="sel" class="form-select" name="cast" style="width: 525px;">
                        {{#each celebrities}}
                        <option value="{{_id}}">{{name}}</option>
                        {{/each}}
                    </select>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-dark">Update!</button>
                </div>
            </form>

        </div>
    </div>
</div>
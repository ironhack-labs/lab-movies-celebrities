<form action="/movies/{{movie._id}}/edit" method="POST">
   <label for="title">Movie Title</label>
    <input required type="text" id="title" name="title" value="{{movie.title}}">

   <label for="genre">Genre</label>
   <input required type="text" id="genre" name="genre" value="{{movie.genre}}">

   <label for="plot">Plot</label>
   <input required type="text" id="plot" name="plot" value="{{movie.plot}}">

   <label for="cast">Cast</label>
   <select name="cast" id="cast" multiple>
           {{#each celebrities}}
                <option value="{{this._id}}">{{this.name}}</option>
           {{/each}}      
   </select>
  
   <button type="submit"> Submit Changes</button>

</form>
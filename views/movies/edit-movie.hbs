<h2>Update Movie</h2>
<br>
<br>
<form action="/movies/{{movie._id}}/edit" method="POST">
    <label>
        Title:
        <input type="text" name="title" value="{{movie.title}}">
    </label>
    <br>
    <label>
        Genre:
        <input type="text" name="genre" value="{{movie.genre}}">
    </label>
    <br>
    <label>
        Plot:
        <input type="text" name="plot" value="{{movie.plot}}">
    </label>
    <br>
    <label>
        Cast:
        <select name="cast" multiple="multiple">
            {{!-- <option selected value=""></option> --}}
            {{#each celebrities}}
            <option value="{{ _id }}">
                {{ name }}
            </option>
            {{/each}}
            {{#each cast}}
            <option selected value="{{ _id }}">
                {{ name }}
            </option>
            {{/each}}
        </select>
    </label>
    <br>
    <button>Submit edit</button>
</form>
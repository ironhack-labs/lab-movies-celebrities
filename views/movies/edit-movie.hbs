<section id="edit-movie">
  <form action='/movies/{{movie._id}}/edit' method='post'>

    <div>
      <label for='title'>Title: </label>
      <input type='text' id='title' name='title' value='{{movie.title}}' />
    </div>
    <div>
      <label for='genre'>Genre: </label>
      <input type='text' id='genre' name='genre' value='{{movie.genre}}' />
    </div>
    <div>
      <label for='plot'>Plot: </label>
      <input type='text' id='plot' name='plot' value='{{movie.plot}}' />
    </div>
    <div>
      <label for="cast">Choose a cast:</label>
      <select name="cast" id="cast" multiple>
      <option selected disabled value='-1'>Select a celebrity</option>
      {{#each celebrities}}
        <option value='{{_id}}'>{{name}}</option>
      {{/each}}
    </select>
    </div>
    <button>Update Movie</button>
  </form>
</section>
<a href="/" class="home"> < Home</a>
<h2>{{title}}</h2>

<form action="/movies/{{movie._id}}" method="POST">
  <label for="title">Title:</label>
  <input type="text" name="title" value="{{movie.title}}" required>

  <label for="genre">Genre:</label>
  <input type="text" name="genre" value="{{movie.genre}}" required>

  <label for="plot">Plot:</label>
  <textarea name="plot" rows="4" required>{{movie.plot}}</textarea>

  <label for="cast">Cast:</label>
  <select name="cast" multiple>
    {{#each celebrities}}
      <option value="{{_id}}" {{#if movie.cast.includes(_id)}}selected{{/if}}>{{name}}</option>
    {{/each}}
  </select>

  <button type="submit">Update Movie</button>
</form>

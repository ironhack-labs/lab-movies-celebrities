<h2>Edit the movie {{movie.title}}</h2>

<form action="/movies/{{movie.id}}" method="post">

    <label> Title:
        <input type="text" name="title" value="{{movie.title}}" />
    </label>

    <label> Genre:
        <input type="text" name="genre" value="{{movie.genre}}" />
    </label>

    <label> Plot:
        <input type="text" name="plot" value="{{movie.plot}}" />
    </label>


    <label> Cast:

        <select name="cast" multiple>

            {{#each celebrities}}
            <option value="{{this.id}}">{{this.name}}</option>
            {{/each}}

        </select>
    </label>

    <button>Save changes</button>


</form>
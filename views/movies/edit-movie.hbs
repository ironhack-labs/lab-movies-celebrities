
<div>
    <h2>Edit: {{movie.name}}</h2>

    <form action="/movies/{{movie._id}}/edit" method="POST">
        <label name="name"> Name: <input type="text" value="{{movie.name}}" name="name"/> </label><br>
        <label name="genre"> Genre: <input type="text" value="{{movie.genre}}" name="genre"/></label><br>
        <label name="plot"> Plot: <input type="text" value="{{movie.plot}}" name="plot"/> </label><br>
        <label name="cast"> Cast: 
            <select name="cast" multiple>
                    {{#each celebrities}}
                    <option value="{{_id}}">{{name}}</option>
                    {{/each}}
            </select>
        </label>
        <br>
        <button type="submit">Save movie</button>
    </form>


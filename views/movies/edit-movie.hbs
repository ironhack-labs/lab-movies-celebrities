<h2>Edit Movie</h2>
<form action="/movies/{{movies.id}}/edit" method="POST">
    <label>
        Title:
        <input type="text" name="title" value="{{movies.title}}">
    </label>

    <label>
        Genre:
        <input type="text" name="genre" value="{{movies.genre}}">
    </label>

    <label>
        Plot:
        <input type="text" name="plot" value="{{movies.plot}}">
    </label>

    <label>
        Cast:
        <select name="cast" multiple>
            {{#each celebrity}}
            <option value="{{_id}}">{{name}}</option>
            {{/each}}
        </select>
    </label>

    <input type="submit" value="Edit Movie">
</form>
<a href='/movies'>Listing Our Movies</a>
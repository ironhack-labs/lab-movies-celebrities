<h2>Edit Movie</h2>
<form action="/movies/{{movie._id}}" method="POST">
    <label for="title">Title</label>
    <input class="form-control mb-3" type="text" name="title" value="{{movie.title}}"/>
    <label for="genre">Genre</label>
    <input class="form-control mb-3" type="text" name="genre" value="{{movie.genre}}"/>
    <label for="plot">Plot</label>
    <input class="form-control mb-3" type="text" name="plot" value="{{movie.plot}}"/>
    <label for="cast">Choose the celebrities:</label>
    <select class="form-control mb-3" name="cast" id="cast" multiple>
        {{#each celebrities as |celebrity| }}
            <option value="{{celebrity._id}}">{{celebrity.name}}</option>
        {{/each}}
    </select>
    <button class="btn btn-primary" type="submit">Edit Movie</button>
</form>
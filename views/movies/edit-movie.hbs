<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Edit Movies</h1>

            <hr>

            <form action="/movies/{{editMovie.id}}/edit" method="POST">

                <div class="mb-3">
                    <label for="{{editMovie.title}}" class="form-label">Title</label>
                    <input type="text" class="form-control" id="{{editMovie.title}}" name="{{editMovie.title}}"
                        value="{{editMovie.title}}">
                </div>
                <div class="mb-3">
                    <label for="{{editMovie.genre}}" class="form-label">Genre</label>
                    <input type="text" class="form-control" id="{{editMovie.genre}}" name="{{editMovie.genre}}"
                        value="{{editMovie.genre}}">
                </div>

                <div class="mb-3">
                    <label for="{{editMovie.plot}}" class="form-label">Plot</label>
                    <input type="text" class="form-control" id="{{editMovie.plot}}" name="{{editMovie.plot}}"
                        value="{{editMovie.plot}}">
                </div>

                <div class="mb-3">
                    <label for="cast" class="form-label">Cast</label>
                    <select name="cast" id="celebrities" class="form-select">
                        {{#each celebrity}}
                        <option value={{id}}>{{name}}</option>
                        {{/each}}
                    </select>
                </div>

                <button type="submit" class="btn btn-dark">Edit</button>
                <a href="/movies" class="btn btn-dark">Back to movies list</a>
            </form>

            <hr>


        </div>
    </div>


</div>
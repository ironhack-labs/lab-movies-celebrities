<h2>Edit Movie</h2>

<form action="/movies/{{_id}}/edit" method="POST">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" value="{{movie.title}}">

    <label for="genre">Genre:</label>
    <input type="text" id="genre" name="genre" value="{{movie.genre}}">

    <label for="plot">Plot:</label>
    <input type="text" placeholder="Plot" name="plot" value="{{movie.plot}}" />

    {{!-- revisa lo del if move,cast.includes --}}
    <label for="cast">Cast:</label>
    <select name="cast" multiple>
        {{#each celebrities}}
        <option value="{{_id}}">{{name}}</option>
        {{/each}}
    </select>

    <button type="submit">Save Changes</button>
</form>

<a href="/movies/{{movie._id}}">Back to Movie Details</a>



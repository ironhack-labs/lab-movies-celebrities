<h2>Edit Movie</h2>

<form action='/movies/{{movie._id}}/edit' method='POST'>
  <label>Title: </label>
  <input type="text" name="title" value="{{movie.title}}" />

  <label>Genre: </label>
  <input type="text" name="genre" value="{{movie.genre}}" />

  <label>Plot: </label>
  <input type="text" name="plot" value="{{movie.plot}}" />
  {{!-- en value le pasamos los datos de la BD para que no est√©n vacios
  al abrir el formulario --}}
  <select name="cast" multiple>
    {{#each movie.cast}}
      <option value={{_id}}>{{name}}</option>
    {{/each}}
  </select>

  <button type="submit">Send form</button>
</form>
<h2>Edit movie</h2>

<form action="/movies/{{movie.id}}/edit" method="POST">
    <label for="title">Title:</label>
    <input value="{{movie.title}}" type="text" name="title">

    <label for="genre">Genre:</label>
    <input value="{{movie.genre}}" type="text" name="genre">

    <label for="plot">Plot:</label>
    <input value="{{movie.plot}}" type="text" name="plot">

    <select name="cast" id="cast">
        {{#each movie.cast as |celebrity|}}
            <option selected>{{celebrity.name}}</option>
        {{/each}}
        {{#each celebrities as |celebrity|}}
            <option value="{{celebrity.id}}">{{celebrity.name}}</option>
        {{/each}}
    </select>

    <button type="submit">EDIT</button>
</form>
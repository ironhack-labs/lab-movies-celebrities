<div class="formsAndDetails">
	<h2>Edit Movie</h2>

	<form action='/movies/{{movieToEdit._id}}/edit' method='POST'>

		<label for=''>Title</label>
		<input type='text' value='{{movieToEdit.title}}' name='title' />
		<label for=''>Genre</label>
		<input type='text' value='{{movieToEdit.genre}}' name='genre' />
		<label for=''>Plot</label>
		<input type='text' value='{{movieToEdit.plot}}' name='plot' />

		<select name='cast' id='cast' multiple>

			{{#each castToEdit}}

				<option value='{{_id}}'>{{name}}</option>

			{{/each}}

		</select>

		<button type='submit'>Save Changes</button>

	</form>

</div>
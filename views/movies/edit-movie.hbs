
<h1>Edit Movie</h1>
<form action="/movies/{{eachMovie._id}}" method="POST">
    <label for="title">Title</label>
    <input type="text" name="title" value="{{eachMovie.title}}">

    <label for="genre">Genre</label>
    <input type="text" name="genre" value="{{eachMovie.genre}}">

    <label for="plot">Plot</label>
    <input type="text" name="plot" value="{{eachMovie.plot}}">

    <select multiple name="cast" >
        {{#each celebrities}}
        <option value="{{this.name}}">{{this.name}}</option>
        {{/each}}
    </select>
<button type="submit">Edit Movie</button>

</form>
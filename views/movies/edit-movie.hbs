<h2>Edit Movie: {{movie.title}}</h2>
<br />
<a href="/movies">Back to movies list</a>
<hr />
<form action="/movies/{{movie._id}}/edit" method="POST">
	<label for="">Title:</label>
	<input type="text" name="title" value="{{movie.title}}" />
	<br />
	<label for="">Genre:</label>
	<input type="text" name="genre" value="{{movie.genre}}" />
	<br />
	<label for="">Plot:</label>
	<textarea name="plot" cols="30" rows="4">{{movie.plot}}</textarea>

	{{!-- <label for="">Plot:</label>
	<input type="text" name="plot" value="{{movie.plot}}" /> --}}
	<br />
	<label for="">Cast:</label>
	{{!-- <input type="text" name="cast" value="{{movieFound.cast}}" /> --}}
	<select name="cast" multiple>
		{{#each movie.cast}}
			<option value="{{this._id}}">{{this.name}}</option>
		{{/each}}
	</select>
	<br />
	<br />
	<br />
	<button type="submit">Save the changes</button>
</form>
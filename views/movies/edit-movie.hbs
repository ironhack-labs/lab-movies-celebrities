<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Add a new movie</h1>
            <form action="/movies/{{id}}/edit" method="POST">
                <div class="mb-3">
                    <label for="title" class="form-label">Movie title</label>
                    <input type="text" class="form-control" id="title" placeholder="Movie title" name="title"
                        value="{{title}}">
                </div>
                <div class="mb-3">
                    <label for="genre" class="form-label">Movie genre</label>
                    <input type="text" class="form-control" id="genre" placeholder="Movie genre" name="genre"
                        value="{{genre}}">
                </div>
                <div class="mb-3">
                    <label for="plot" class="form-label">Movie plot</label>
                    <input type="text" class="form-control" id="plot" placeholder="Movie plot" name="plot"
                        value="{{plot}}">
                </div>
                <button type="submit" class="btn btn-primary">Edit movie</button>
            </form>
        </div>
    </div>
</div>
<div class="container">

    <h2>Edit movie</h2>

    <form action="/movies/{{movie.id}}/edit" method="POST">
        <div>
            <label class="form-label" for="title">Title</label>
            <input class="form-control" type="text" id="title" name="title" value="{{movie.title}}">
        </div>
        <div>
            <label class="form-label" for="genre">Genre</label>
            <input class="form-control" type="text" id="genre" name="genre" value="{{movie.genre}}">
        </div>
        <div>
            <label class="form-label" for="plot">Plot</label>
            <input class="form-control" type="text" id="plot" name="plot" value="{{movie.plot}}">
        </div>
        <div>
            <label class="from-label" for="cast">Cast</label>
            <select class="form-select" multiple name="cast" id="cast">
                {{#each celebrities}}
                <option value="{{_id}}">{{name}}</option>
                {{/each}}
            </select>
        </div>
        <button type="submit" class="btn btn-dark">Edit reference</button>
    </form>
</div>
</div>
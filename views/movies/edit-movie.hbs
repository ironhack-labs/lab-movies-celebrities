<h2>Edit Movie: {{movie.title}}</h2>

<form action="/movies/{{movie._id}}" method="POST">
  <label>
    Title
    <input type="text" name="title" value="{{movie.title}}" />
  </label>

  <label>
    Genre
    <input type="text" name="genre" value="{{movie.genre}}" />
  </label>
  <label>
    Plot
    <input type="text" name="plot" value="{{movie.plot}}"> </input>
  </label>

  <label for="cast">Choose Cast Member:</label>

  <select name="cast" id="cast" value="{{movie.cast}}" multiple>
    {{#each celebrities}}
      <option value="{{_id}}">{{name}}</option>
    {{/each}}
  </select>

  <button type="submit"> Done Editing! </button>
</form>
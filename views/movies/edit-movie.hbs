<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <h2>Edit movie: {{movie.title}}</h2>
            <form class="form-group" action="/movies/id/{{movie._id}}" method="post">
                <div class="form-group">
                    <input type="hidden" class="form-control" id="id" name="id" value="{{movie._id}}">
                </div>
                <div class="form-group">
                    <label for="title">Titulo</label>
                    <input type="text" class="form-control" id="title" name="title" value="{{movie.title}}">
                </div>
                <div class="form-group">
                    <label for="genre">Genero</label>
                    <input type="text" class="form-control" id="genre" name="genre" value="{{movie.genre}}">
                </div>
                <div class="form-group">
                    <label for="plot">Plot</label>
                    <input type="text" class="form-control" id="plot" name="plot" value="{{movie.plot}}">
                </div>
                <div class="form-group">
                    <label for="cast">Cast</label>
                    <select name="cast" id="cast" multiple>
                        {{#each celebrities}}
                            <option value="{{_id}}">{{name}}</option>
                        {{/each}}
                    </select>
                </div>
                <button type="submit" class="btn btn-danger btn-block">Editar</button>
            </form>
        </div>
    </div>
</div>






</form>
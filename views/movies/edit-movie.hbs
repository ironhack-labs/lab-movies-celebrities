<main>
    <article>
        <h2>Edit Movie Details</h2>

        <form action="/movies/{{movie.id}}/edit" method="POST">
            <aside>
                <label for="movie-title">Title</label>
                <input type="text" , name="title" id="movie-title" value="{{movie.title}}">
            </aside>

            <aside>
                <label for="movie-genre">Genre</label>
                <input type="text" , name="genre" id="movie-genre" value="{{movie.genre}}">
            </aside>

            <aside>
                <label for="movie-plot">Plot</label>
                <textarea name="plot" id="movie-plot" placeholder="{{movie.plot}}"></textarea>
            </aside>

            <aside>
                <label for="movie-cast">Cast <span>(press CTRL to select or unselect more than one)</span></label>
                <select name="cast" id="movie-cast" multiple>
                    {{#each currentCast}}
                    <option value={{id}} selected> {{name}} </option>
                    {{/each}}

                    {{#each notInCastCelebs}}
                    <option value={{id}}> {{name}} </option>
                    {{/each}}
                </select>
            </aside>


            <button type="submit">Submit changes</button>

        </form>

        <a href="/">Back to Home Page</a>
        <p>{{errorMessage}}</p>
    </article>
</main>
<h2>Edit movie</h2>
<form action="/movies/{{_id}}/edit" method="POST">
    <label for="">
    Title:
        <input type="text" name="title" value={{movie.title}}>
    </label>
     <label for="">
        Genre:
        <input type="text" name="genre" value={{movie.genre}}>
    </label>
     <label for="">
        Plot:
        <input type="text" name="plot" value={{movie.plot}}>
    </label>

    <select name="cast">
    {{#each celebrities}}
      <option value={{_id}}>{{name}}</option>
    {{/each}}
  </select>
    <button type="submit">Submit</button>
</form>


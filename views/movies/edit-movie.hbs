<h2>Edit Movie</h2>

<form action="/movies/{{movieInfo._id}}/edit" method="post">
  <label for='title'>Title</label>
  <input type='text' name='title' id='title' value='{{movieInfo.title}}' />

    <label for='genre'>Genre</label>
    <input type='text' name='genre' id='genre' value='{{movieInfo.genre}}' />

    <label for='plot'>Plot</label>
    <input type='text' name='plot' id='plot' value='{{movieInfo.plot}}' />

    <label for='cast'>Cast</label>
    <select name='cast' id='cast'>
      {{#each movieInfo.cast}}
        <option value='{{this._id}}'>{{this.name}}</option>
      {{/each}}
    </select>

<button type="submit"> Edit Movie</button>

</form>
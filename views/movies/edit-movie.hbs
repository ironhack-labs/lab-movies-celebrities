{{!-- views/edit-movie.hbs --}}

<a href="/">Go back Home</a>
<h2>Edit Movies</h2>

<form action="/movies/{{movie._id}}/edit" method="POST">
  <label for='title'>Title:</label>
  <input type="text" id="title" name="title" placeholder="Title of the movie" value="{{movie.title}}" required>
  <label for='genre'>Genre</label>
  <input type="text" id="genre" name="genre"  placeholder="Genre" value="{{movie.genre}}">
  <label for='plot'>Plot</label>
  <input type="text" id="plot" name="plot" placeholder="Plot" value="{{movie.plot}}">
  <label for='cast'>Celebrities:</label>
  <select name="cast" id="cast" multiple>
    {{!-- <option disable selected value="{{actor._id}}"></option>  without selected any option /first option empty --}}
    {{#each actors}}  {{!--All the celebrities from the Model "Celebrity" and collection: celebrities --}}
      {{#if includedInCast}}
      <option value="{{_id}}" selected>{{name}}</option>
      {{else}}
      <option value="{{_id}}">{{name}}</option>{{!--From the collection--> celebrities --}}
      {{/if}}
    {{/each}}
  </select>
  
  <button type="submit">Submit</button>
</form>

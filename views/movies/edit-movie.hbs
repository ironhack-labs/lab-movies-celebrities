<h2>Edit Movie</h2>

<form action="/movies/{{movie._id}}/edit" method="POST">

    <label for="">
        Title
        <input type="text" , value="{{movie.title}}" name="title">
    </label>
    <label for="">
        Plot
        <input type="text" , value="{{movie.plot}}" name="plot">
    </label>
    <label for="">
        Genre
        <input type="text" , value="{{movie.genre}}" name="genre">
    </label>
    <label for="">
        Cast
        <select name="cast" id="cast" multiple name="cast">
            {{#each celebrities}}

            <option value="{{_id}}">{{name}}</option>
            {{/each}}


        </select>
    </label>

    <input type="submit" value="Edit movie">



</form>
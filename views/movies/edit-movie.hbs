<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Edit Movie</h1>

            <hr>

            <form action="/movies/{{id}}/edit" method="POST">


                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" id="title" name="title" value="{{title}}">
                </div>
                <div class="mb-3">
                    <label for="genre" class="form-label">genre</label>
                    <input type="text" class="form-control" id="genre" name="genre" value="{{genre}}">
                </div>
                <div class="mb-3">
                    <label for="plot" class="form-label">Plot</label>
                    <input type="text" class="form-control" id="plot" name="plot" value="{{plot}}">
                </div>
                <div class="mb-3">
                    <label for="cast" class="form-label">Cast</label>
                    <select name="cast" class="form-select" multiple>

                        {{#each cast}}
                        <option value="{{id}}">{{name}}</option>
                        {{/each}}

                    </select>
                </div>

                <button type="submit" class="btn btn-dark">Crear </button>
                <a href="/" class="btn btn-dark">Volver al incio</a>
            </form>
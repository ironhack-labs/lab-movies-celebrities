<div class='container'>

  <div class='row justify-content-center'>

    <div class='col-md-8'>

      <h2>Edit movie</h2>
      <hr />

      <form action='/movies/{{movie._id}}/edit' method='POST'>

        <div class='mb-3'>
          <label for='field1' class='form-label'>Title</label>
          <input type='text' class='form-control' id='field1' name='title' value='{{movie.title}}' />
        </div>

        <div class='mb-3'>
          <label for='field2' class='form-label'>Genre</label>
          <input type='text' class='form-control' id='field2' name='genre' value='{{movie.genre}}' />
        </div>

        <div class='mb-3'>
          <label for='field3' class='form-label'>Plot</label>
          <input type='text' class='form-control' id='field3' name='plot' value='{{movie.plot}}' />
        </div>

        <div class='mb-3'>
          <label for='field4' class='form-label'>Cast</label>
          <select class='form-select' multiple id='field4' name='cast'>
            {{#each celebrities}}
              <option value='{{_id}}'>{{name}}</option>
            {{/each}}
          </select>
        </div>

        <div class='d-grid'>
          <button type='submit' class='btn btn-dark'>Submit</button>
        </div>
      </form>
    </div>
  </div>

</div>
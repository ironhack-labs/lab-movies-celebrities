<div class="container mt-5">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Update {{movie.title}}</h1>
            <hr>

            <form action="/movies/{{movie.id}}/edit" method="POST">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" id="title" name="title" value="{{movie.title}}">
                </div>

                <div class="mb-3">
                    <label for="genre" class="form-label">Genre</label>
                    <input type="text" class="form-control" id="genre" name="genre" value="{{movie.genre}}">
                </div>

                <div class="mb-3">
                    <label for="plot" class="form-label">Plot</label>
                    <input type="text" class="form-control" id="plot" name="plot" value="{{movie.plot}}">
                </div>

                <div class="mb-3">
                    <label for="cast" class="form-label">Select the cast...</label>
                    <select id="cast" name="cast" class="form-select" multiple aria-label="multiple select">
                        {{#each movie.cast}}
                        <option value="{{id}}" selected>{{name}}</option>
                        {{/each}}
                        {{#each celebrities}}
                        <option value="{{id}}">{{name}}</option>
                        {{/each}}
                    </select>
                </div>

                <input type="hidden" name="id" value="{{movie.id}}">

                <div class="d-grid mt-5">
                    <button type="submit" class="btn btn-dark btn-lg">Update movie</button>
                </div>

            </form>
        </div>
    </div>
</div>
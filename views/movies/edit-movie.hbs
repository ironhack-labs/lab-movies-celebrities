<div class="container">

  <div class="row justify-content-center">
    <div class="col-md-6">

      <h1>Editar {{movie.title}}</h1>

      <form action="/movies/{{movie._id}}/edit" method="POST">
        <div class="mb-3">
          <label for="title" class="form-label">TÃ­tulo</label>
          <input type="text" class="form-control" id="title" name="title" value="{{movie.title}}">
        </div>
        <div class="mb-3">
          <label for="genre" class="form-label">Genre</label>
          <input type="text" class="form-control" id="genre" name="genre" value="{{movie.genre}}">
        </div>
        <div class="mb-3">
          <label for="plot" class="form-label">Plot</label>
          <input type="text" class="form-control" id="plot" name="plot" value="{{movie.plot}}">
        </div>

        <div class="mb-3">
          <label for="cast" class="form-label">Cast</label>
          <select name="cast" id="cast">
            {{#each celebrities}}
            <option value="{{_id}}">{{name}}</option>
            {{/each}}
          </select>
        </div>

        <div class="d-grid">
          <button type="submit" class="btn btn-dark">Edit movie</button>
        </div>

      </form>

      <hr>
    </div>
  </div>



  <a href="/" class="btn btn-dark">Volver al inicio</a>
</div>

<h2>Edit Movie</h2>
<form action="/movies/{{movie._id}}" method="POST">
  <label for="title">Title:</label>
  <input type="text" name="title" id="title" value="{{movie.title}}" required>

  <label for="genre">Genre:</label>
  <input type="text" name="genre" id="genre" value="{{movie.genre}}" required>

  <label for="plot">Plot:</label>
  <textarea name="plot" id="plot" required>{{movie.plot}}</textarea>

  <label for="cast">Cast:</label>
  <select name="cast" id="cast" multiple required>
    {{#each celebrities}}
      <option value="{{this._id}}" {{#if this.selected}}selected{{/if}}>{{this.name}}</option>
    {{/each}}
  </select>

  <button type="submit">Save Changes</button>
</form>
<h2>You are Editing {{movie.title}}</h2>

<form action="/movies/{{movie._id}}/edit" method="post">
    <label>Title:
        <input type="text" name="title" value="{{movie.title}}"></label>
    <label>Genre:
        <input type="text" name="genre" value="{{movie.genre}}"></label>
    <label>Plot:
    <textarea name="plot" cols="30" rows="10">{{movie.plot}}</textarea></label>
    <label>Cast:
        <select name="cast">
            {{#each celebrities}}
                <option value="{{id}}">{{name}}</option>
            {{/each}}
        </select>

    </label>
    <button type="submit">Create</button>
</form>


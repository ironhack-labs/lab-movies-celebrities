<section>
    <h2>Movie Edit</h2>
    <div>
        <form action="/movies/{{movieData._id}}/edit" method="post">
            <input type="text" name="title" placeholder="Title" value="{{movieData.title}}">
            <input type="text" name="genre" placeholder="Genre" value="{{movieData.genre}}">
            <textarea rows="3" name="plot" placeholder="Plot">{{movieData.plot}}</textarea>
            <label for="cast">Choose casts:</label>
            <select name="cast" id="cast" multiple>
                {{#each celebrities}}
                    <option value="{{this._id}}">{{this.name}}</option>
                {{/each}}
            </select>
            <button type="submit">Submit</button>
        </form>
    </div>
</section>


<div class="container">

    <h2>EDIT A MOVIE</h2>

    <div class="row justify-content-center">

        <div class="col-md-6">



            <hr>
            {{#with movie}}

            {{!-- USAMOS EL WITH PARA QUE LOS {{}} DESDE AQUÍ ESTÉN RELACIONADOS CON MOVIE --}}
            {{!-- AÑADIMOS ID DE CADA MOVIE SELECCIONADA PARA EDITAR --}}
            <form action="/movies/{{id}}" method="POST">

                <div class="form-group">
                    <label for="title">title</label>

                    {{!-- AÑADIMOS VALUE EN CADA CAMPO DEL FORM CON LOS VALORES DE LA PELI EN PARTICULAR> --}}
                    <input type="text" class="form-control" name="title" id="title" value='{{title}}'>
                </div>

                <div class="form-group">
                    <label for="genre">genre</label>
                    <input type="text" class="form-control" name="genre" id="genre" value='{{genre}}'>
                </div>

                <div class="form-group">
                    <label for="plot">plot</label>
                    <input type="text" class="form-control" name="plot" id="plot" value='{{plot}}'>
                </div>
                <div class="form-group">
                    <label for="cast">Choose a cast:</label>
                    {{/with}}
                    <select name="cast" id="cast" multiple>
                        {{#each celebrity}}

                        <option value="{{id}}">{{name}}</option>

                        {{/each}}

                    </select>
                    
                </div>


                <button type="submit" class="btn btn-dark btn-block btn-lg">Edit movie </button>

            </form>

        </div>

    </div>

</div>
<h2>Edit Movie</h2>
<form action="/movies/{{movie._id}}" method="POST">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" value="{{movie.title}}">

    <label for="genre">Genre:</label>
    <input type="text" id="genre" name="genre" value="{{movie.genre}}">

    <label for="plot">Plot:</label>
    <textarea id="plot" name="plot">{{movie.plot}}</textarea>

    <label for="cast">Cast:</label>
    <select name="cast" id="cast" multiple>
        {{#each celebrities}}
        <option value="{{this._id}}" {{#if this.selected}}selected{{/if}}>{{this.name}}</option>
        {{/each}}
    </select>

    <button type="submit">Submit</button>
</form>

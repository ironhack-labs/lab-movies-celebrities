    <h2> Edit Movie</h2>
    
    <form method='POST' action="/movies/edit/{{movie._id}}">

        <label for="title">Title</label>
        <input type="text" name="title" value="{{movie.title}}"/>

        <br/>

        <label for="genre">Genre</label>
        <input type="text" name="genre" value="{{movie.genre}}"/>

        <br/>
        
        <label for="plot">Plot</label>
        <input type="text" name="plot" value="{{movie.plot}}"/>

        <br/>

        <label for="cast">Cast</label>
        <select name="cast" multiple>
            
            {{#each allCelebrities }}

                <option {{#ifIn this._id @root.movie.cast }} selected {{/ifIn}} value="{{_id}}">
                    {{ name }}
                </option>

            {{/each}}
        </select>

        <br/>

        <button type="submit" class="btn">Submit</button>

    </form>
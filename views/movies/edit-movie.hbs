<div class = "form-container">
  <h1>Edit Movie</h1>
  <form action="/movies/{{movie.id}}/edit" method="POST">
    <div>
      <label for="title"> Title </label>
      <input value="{{movie.title}}" type="text" name="title" id ="title"/>
    </div>
    <div>
      <label for="genre">Genre </label>
      <input value="{{movie.genre}}" type="text" name="genre" id ="genre"/>
    </div>

    <div>
      <label for="plot"> Plot</label>
      <input value="{{movie.plot}}" type="text" name="plot" id ="plot" />
    </div>
    <div>
      <label for="cast">Cast</label>
      <select name="cast" id="cast" multiple>
        {{#each celebrities as |celebrity|}}
          <option value="{{celebrity.id}}">
            {{celebrity.name}}
          </option>
        {{/each}}
      </select>
    </div>
    
    <button type="submit">Update changes</button>
  </form>
</div>
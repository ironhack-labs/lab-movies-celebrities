<h2>Edited</h2>
<div id="form">
    <form action='/movies/{{movieId}}/edit' method="POST">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" placeholder="{{movieToEdit.title}}"><br><br>

        <label for="description">Description:</label>
        <input type="text" id="description" name="description" placeholder="{{movieToEdit.description}}"><br><br>

        <label for="plot">Plot:</label>
        <input type="text" id="plot" name="plot" placeholder="{{movieToEdit.plot}}"><br><br>

        <label for="cast">Cast:</label>
        <select name="cast" id="cast" multiple>
            {{#each celebrity}}
            <option value="{{_id}}">{{name}}</option>
            {{/each}}
        </select>
        <input type="submit" value="Submit Changes">
    </form>
</div>

<a id="btn" href="/">Home</a>
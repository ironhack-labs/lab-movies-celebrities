<h2>Update the movie</h2>

<form action='/movies/{{_id}}/edit' method='post'>

  <label for='title'>Title</label>
  <input type='text' name='title' id='title' value='{{title}}' />

  <label for='author'>Author</label>
  <input type='text' name='author' id='author' value='{{author}}' />

  <label for='description'>Description</label>
  <textarea name='description' id='description' cols='30' rows='4'> {{description}}</textarea>

  <label for='rating'>Rating</label>
  <input type='number' name='rating' id='rating' min='0' max='10' value='{{rating}}' />

  <button type='submit'>Update</button>

</form>
<h2>Let's change the information for '{{moviesData.title}}'</h2>

<form action="/movies/{{moviesData._id}}/edit" method="POST">
  <label> Title:
    <input type="text" name="title" value="{{moviesData.title}}" />
  </label>

  <label> Genre:
    <input type="text" name="genre" value="{{moviesData.genre}}" />
  </label>

  <label> Plot:
    <textarea name="plot" cols="30" rows="4">
        {{moviesData.plot}}
    </textarea>
  </label>

  <label>
    Cast:
    <select name="cast" multiple>
      {{#each celebritiesData}}
        <option value={{this._id}}>{{this.name}}</option>
      {{/each}}
    </select>
  </label>


  <button>Save changes</button>
</form>
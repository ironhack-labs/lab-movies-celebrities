<div class='bg-light h-100'>
  <nav class='navbar navbar-expand-lg bg-dark'>
    <div class='container-fluid'>
      <button
        class='navbar-toggler'
        type='button'
        data-bs-toggle='collapse'
        data-bs-target='#navbarNavAltMarkup'
        aria-controls='navbarNavAltMarkup'
        aria-expanded='false'
        aria-label='Toggle navigation'
      >
        <span class='navbar-toggler-icon'></span>
      </button>
      <div class='collapse navbar-collapse' id='navbarNavAltMarkup'>
        <div class='navbar-nav'>
          <a
            class='nav-link active text-light'
            aria-current='page'
            href='/'
          >Home</a>
          <a class='nav-link text-light' href='/celebrities'>Celebrities</a>
          <a class='nav-link text-light' href='/movies'>Movies</a>
        </div>
      </div>
    </div>
  </nav>

  <div class='text-center pt-4'>
    <h2>Edit the Movie: {{movie.title}}</h2>
    <br />

    <div class='rounded'>
      <form action='/movies/{{movie._id}}/edit' method='post'>
        <div>
          <label class='form-label'>
            Title:
            <input
              class='form-control'
              type='text'
              name='title'
              value='{{movie.title}}'
            />
          </label>
        </div>
        <div>
          <label class='form-label'>
            Genre:
            <input
              class='form-control'
              type='text'
              name='genre'
              value='{{movie.genre}}'
            />
          </label>
        </div>
        <div>
          <label class='form-label'>
            Plot:
            <textarea
              class='form-control'
              id='exampleFormControlTextarea1'
              name='plot'
              cols='22'
              rows='3'
              value='{{movie.plot}}'
            ></textarea>
          </label>
        </div>
        <div>
          <label class='form-label'>Cast:</label>
        </div>
        <div>
          <select class='form-label' name='cast'>
            {{#each celebrities}}
              <option class='form-control' value='{{_id}}'>{{name}}</option>
            {{/each}}
          </select>
        </div>
        <button class='btn btn-primary m-4' type='submit'>Save Changes</button>
      </form>
    </div>
  </div>
</div>
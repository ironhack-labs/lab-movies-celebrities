<h2>Edit the movie</h2>

<form action="/movies/{{infomovie._id}}" method="post">

  <label for="title">Title</label>
  <input type="text" name="title" id="title" value="{{infomovie.title}}" />

  <label for="genre">Genre</label>
  <input type="text" name="genre" id="genre" value="{{infomovie.genre}}" />

  <label for="plot">Plot</label>
  <input type="text" name="plot" id="plot" value="{{infomovie.plot}}" />

  <label for="cast">Edit the cast:</label>

  <select name="cast" id="cast" multiple>
    {{#each infoceleb}}
      <option value="{{_id}}">{{name}}</option>

    {{/each}}
  </select>

  <button type="submit">Update this movie</button>
</form>
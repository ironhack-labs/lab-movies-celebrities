<h2>Editing {{movie.title}}</h2>
<div>
	<form action="/movies/{{movie.id}}/edit" method="POST">
			<label for="title">Title</label>
			<input type="text" name="title" value="{{movie.title}}">
			<label for="genre">Genre</label>
			<input type="text" name="genre" value="{{movie.genre}}">
			<label for="plot">Plot</label>
			<textarea name="plot" id="plot">
{{movie.plot}}
			</textarea>
			<div>
				<label for="cast">Cast</label>
				<select name="cast" multiple="true">
						{{#each movie.cast}}
						<option value="{{this.id}}" selected>{{this.name}}</option>
						{{/each}}
						{{#each celebs}}
						<option value="{{this.id}}">{{this.name}}</option>
						{{/each}}
				</select>
			</div>
		<button type="submit">Edit</button>
		<button type="reset">Reset</button>
	</form>
</div>
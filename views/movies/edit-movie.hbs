<h2>Edit the Movie:</h2>
<h2>{{title}}</h2>
<br>

<form action="/movies/{{_id}}/edit" method="POST">
  <label> Title:
    <input type="text" name="title" value="{{title}}" />
  </label>

  <label> Genre:
    <input type="text" name="genre" value="{{genre}}" />
  </label>

  <label> Plot:
    <textarea name="plot" cols="30" rows="4">{{plot}}</textarea>
  </label>

  <label> Celebrity:
      <input type="text" name="celebrity" value="{{celebrity}}" />
  </label>

  <button>Save changes</button>
</form>

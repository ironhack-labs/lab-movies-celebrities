<h2>Edit Movie</h2>

<form action="/movies/{{id}}/edit" method="post">

  <label for="title">Title</label>
  <input type="string" name="title" id="title" value="{{movie.title}}" />

  <label for="genre">Genre</label>
  <input type="string" name="genre" id="genre" value="{{movie.genre}}" />

  <label for="plot">Plot</label>
  <input name="string" id="plot" value="{{movie.plot}}" />

  <label for="cast">Cast
    <select name="cast" id="cast" multiple>
      <option disable selected value=""></option>
      {{#each celebrities}}
        <option value="{{id}}">{{name}}</option>
      {{/each}}
    </select>
  </label>

  <button type="submit">Update</button>

</form>
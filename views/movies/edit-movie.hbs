<h2>Edit movie</h2>

<form action="/movies/{{id}}" method="post">
  <label for="title">Title</label>
  <input type="text" name="title" id="title" value="{{movie.title}}" />

  <label for="genre">Genre</label>
  <input type="text" name="genre" id="genre" value="{{movie.genre}}" />

  <label for="plot">Plot</label>
  <input type="text" name="plot" id="plot" value="{{movie.plot}}" />

  <label for="cast">Cast</label>

  <select name="cast" id="cast" multiple>
    {{#each movie.cast}}
      <option value="{{_id}}">{{name}}</option>

    {{/each}}

  </select>

  <button type="submit">Edit movie details</button>

</form>
<hr />
<button><a href="/movies">Back to movies list</a></button>
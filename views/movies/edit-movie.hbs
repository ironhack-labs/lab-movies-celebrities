<h2>Edit</h2>

<form action="/movies/{{movie._id}}/edit" method="post">
  <label>
    Title:
    <input type="text" name="title" placeholder="{{movie.title}}" value="{{movie.title}}">
  </label>

  <label>
    Genre:
    <input type="text" name="genre" placeholder="{{movie.genre}}" value="{{movie.genre}}">
  </label>
  <label>
    Plot:
    <textarea row="5" cols="55" type="text" name="plot" placeholder="{{movie.plot}}">{{movie.plot}}</textarea>

  </label>

  <label>
    Cast:
    <select name="cast">
      {{#each celebrities}}
      <option value="{{_id}}">{{name}}</option>
      {{/each}}
    </select>
  </label>
  <button type="submit">Save Changes</button>
</form>
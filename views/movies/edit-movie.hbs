<h2>Edit Movie</h2>
<form action="/movies/{{movie._id}}/edit" method="POST">
  <label for="title">Title:</label>
  <input type="text" id="title" name="title" value="{{movie.title}}"/><br /><br />

  <label for="genre">Genre:</label>
  <input type="text" id="genre" name="genre" value="{{movie.genre}}"/><br /><br />

  <label for="plot">Plot:</label>
  <textarea name="plot" id="plot" >{{movie.plot}}</textarea>
<label for="cast"> Cast</label>
  <select name="cast" id="cast">
    {{#each celebrityToUpdate}}
      <option value="{{_id}}" selected>{{name}}</option>
    {{/each}}
  </select>


  <button type="submit">Edit Movie
  </button>
  
</form>

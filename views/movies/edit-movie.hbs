<h2>Edit: {{movie.title}}</h2>

<form action="/movies/{{movie.id}}/edit" method="post" enctype="application/x-www-form-urlencoded">
  <div class="input-group mb-3">
    <label for="title" class="input-group-text">Title</label>
    <input type="text" name="title" class="form-control" value="{{movie.title}}">
  </div>

  <div class="input-group mb-3">
    <label for="genre" class="input-group-text">Genre</label>
    <input type="text" name="genre" class="form-control" value="{{movie.genre}}">
  </div>

  <div class="input-group mb-3">
    <label for="plot" class="input-group-text">Plot</label>
    <input type="text" name="plot" class="form-control" value="{{movie.plot}}">
  </div>

  <div class="input-group mb-3">
    <label for="cast" class="input-group-text">Cast</label>
    <select name="cast" id="cast" class="form-control" multiple>
      {{#each celebrities}}
        <option value="{{_id}}" {{#celebrityInCast ../cast this}}selected{{/celebrityInCast}}>{{name}}</option>
      {{/each}}
    </select>
  </div>

  <button type="submit">Update Movie</button>
</form>
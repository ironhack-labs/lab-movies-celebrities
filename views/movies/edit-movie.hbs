<h1>Edit Movie</h1>

<div class="new-movie-form">
  <form action="/movies/{{movie.id}}/edit" method="POST">
    <div class="mb-3">
      <label for="title" class="form-label">Title</label>
      <input value="{{movie.title}}" type="text" id="title" name="title" class="form-control">
    </div>
    <div class="mb-3">
      <label for="genre" class="form-label">Genre</label>
      <input value="{{movie.genre}}" type="text" id="genre" name="genre" class="form-control">
    </div>
    <div class="mb-3">
      <label for="genre" class="form-label">Plot</label>
      <textarea class="form-control" name="plot" id="plot" rows="5">{{movie.plot}}</textarea>
    </div>
    <div>
      <select name="cast" class="form-select" multiple aria-label="multiple select example">
        {{#each celebrities}}
          <option value="{{id}}">
            {{name}}
          </option>
        {{/each}}
      </select>
    </div>
    <button class="mt-5 btn btn-dark">EDIT MOVIE!</button>
  </form>
</div>
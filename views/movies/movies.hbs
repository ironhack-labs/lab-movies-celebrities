<h1>Movies in our DB:</h1>

{{#each movies}}
    <section>
        <h2>{{this.title}}</h2>
        <p>
            Genre: {{this.genre}}<br />
            Plot: {{this.plot}} <br />
            Cast: <ul>
            {{#each this.cast}}
                 <li>{{this.name}}</li>
            {{/each}}
            </ul>
        </p>
        <p>

        
            <a href="/movies/{{this._id}}">More details</a> |
            <a href="/movies/{{this._id}}/edit">Edit</a> |
            <form action="/movies/{{_id}}/delete" method="POST">
                <button>Delete</button>
            </form>
        </p>
        

    </section>
{{/each}}


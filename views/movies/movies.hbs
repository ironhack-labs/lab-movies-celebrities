<h1>All movies</h1>

<div class="container-md mt-5">
    <div class="row">
        {{#each movies}}
        <div class="col-12 col-md-6 col-lg-4 col-xl-3 mb-3">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h2 class="card-title">{{title}}</h2>
                    <p>Genre: {{genre}}</p>
                    <p>Plot: {{plot}}</p>
                    <p>Cast: {{#each cast}}
                    <ul>
                        <li>{{name}}</li>
                    </ul>
                    {{/each}}
                    </p>
                    <div class="row">
                        <div class="col-6">
                            <a href="/movies/{{id}}" class="btn btn-dark btn-sm">Details</a>
                        </div>
                        <div class="col-6">

                            <form action="/movies/{{id}}/delete" method="POST">
                                <input type="submit" value="Delete movie" class="btn btn-danger btn-sm">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
        <a href="/movies/create" class="btn btn-dark btn-lg mt-4">Create movie</a>
    </div>
</div>
<div class="container d-flex flex-column justify-content-center">
    <h2>List of Movies</h2>
    <hr>
    <div class="justify-content-center">
        {{#each movies}}
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h3>{{title}}</h3>
                <p>Genre: {{genre}}</p>
                <p>{{plot}}</p>
                <p>{{cast}}</p>
                <a href="/movies/{{_id}}" class="btn btn-success">See More</a>
                {{!-- <form action="/celebrities/{{_id}}/delete" method="POST">
                    <button class="btn btn-warning">Delete Celebrity</button>
                </form> --}}
            </div>
        </div>
        {{/each}}
    </div>
    <a href="/movies/create" type="button" class="btn btn-secondary">Add a New Movie</a>
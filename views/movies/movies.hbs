<div>
    {{#each movies}}

        <h2>{{title}}</h2>
        <p>{{genre}}</p>
        <h4>{{plot}}</h4>

        {{#each cast}}
            <h6>{{name}}</h6>
            <h6>{{occupation}}</h6>
            <h6>{{catchPhrase}}</h6>
        {{/each}}

        <a href="/movies/{{_id}}">See Movie Details</a>
    {{/each}}
    
</div>
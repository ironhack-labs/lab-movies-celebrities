<h2>All the Movies</h2>

<div class="card">
  {{#each movies}}
    <div class="card-body">
      <h5 class="card-title">{{title}}</h5>
      <p class="card-text">Genre: {{genre}}</p>
      <p class="card-text">Plot: {{plot}}</p>
      <ul>
        {{#each cast}}
          <li>{{this.name}}</li>
        {{/each}}
      </ul>

    <a href="/movies/{{_id}}">More Info</a>

    </div>
  {{/each}}
</div>
<h2>Edit the Movie: {{title}}</h2>

<form action='`' movies ${_id} edit` method='POST'>
	<label>
		Title:
		<input type='text' name='title' value='{{title}}' />
	</label>

	<label>
		Genre:
		<input type='text' value='{{genre}}' />

	</label>

	<label>
		Plot:
		<input type='text' value='{{plot}}' name='plot' />
	</label>

	<label>
		Cast:
		<input type='text' value='{{cast}}' name='cast' />
	</label>

	<button>Save changes</button>
</form>

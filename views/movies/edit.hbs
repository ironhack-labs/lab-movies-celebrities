<h1>Edit movie form</h1>

<form action="/movies/{{movie._id}}" method="POST">
  <label for="title">Title</label>
  <input type="text" name="title"
    id="title" placeholder="Movie title"
    value="{{movie.title}}">
  <label for="genre">Genre</label>
  <input type="text" name="genre"
    id="genre" placeholder="Movie genre"
    value="{{movie.genre}}">
  <label for="plot">Plot</label>
  <input type="text" name="plot"
    id="plot" placeholder="Movie plot"
    value="{{movie.plot}}">

  <select name="cast" id="cast" multiple>
    {{#each celebrities as |celebrity|}}
      <option value="{{celebrity._id}}">{{celebrity.name}}</option>
    {{/each}}
  </select>

  <button type="submit">Update</button>

</form>
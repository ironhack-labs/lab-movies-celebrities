<form action='/movies/{{movieInfo._id}}/edit' method='POST' class='container edit'>
	<label>
		Title:
		<br />
		<input type='text' name='title' value='{{movieInfo.title}}' />
	</label>

	<label>
		Genre:
		<br />
		<input type='text' name='genre' value='{{movieInfo.genre}}' />

	</label>

	<label>
		Plot:
		<br />
		<input type='text' value='{{movieInfo.plot}}' name='plot' />
	</label>

	<label>
		Cast:
		<br />

		<select name='cast'>
			{{#each celebs}}

				<option value='{{_id}}'>{{name}}</option>
			{{/each}}
		</select>

	</label>

	<button>Save changes</button>
	<a href='javascript:history.back()'>Go Back</a>
</form>

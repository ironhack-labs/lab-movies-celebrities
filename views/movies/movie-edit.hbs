<div class="container">
<h2>Edit movie</h2>

<form action="/movies/{{movie._id}}/edit" method="POST">
  <label for="title">Title:</label>
  <input type="text" name="title" value="{{movie.title}}" />

  <label for="genre">Genre:</label>
  <input type="text" name="genre" value="{{movie.genre}}" />

  <label for="plot">Plot:</label>
  <textarea name="plot" cols="30" rows="15">{{movie.plot}}</textarea>

  <label for="cast">current Cast</label>
<div class="cast-edit">
    {{#each movie.cast}}
      <p >{{name}}</p>
    {{/each}}
</div >
    
  </select>

  <label for="cast">Select cast</label>
  <select name="cast" multiple>
    {{#each castArr}}

      <option value="{{_id}}">{{name}}</option>
    {{/each}}

  </select>

  <button type="submit">Edit</button>
</form>
<a href="/movies">back</a>
</div>
{{#with movie}}
  <h2>Edit the movie {{title}}</h2>
  <form action="/movie/{{_id}}" method="post">
    <label>
      Title:
      <input type="text" name="title" value="{{title}}" />
    </label>

    <label>
      Genre:
      <input type="text" name="genre" value="{{genre}}" />
    </label>

    <label>
      Plot:
      <textarea name="plot" cols="30" rows="4">{{plot}}</textarea>
    </label>
{{/with}}
    <label>
      Cast:
      <select name="cast" multiple>
        {{#each cast}}
          <option value="{{_id}}"> {{name}} </option>
        {{/each}}
      </select>
    </label>

    <button type="submit">Save changes</button>
  </form>

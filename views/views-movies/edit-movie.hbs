<div class="container">
    <h2>Editar película</h2>
    <hr>

    <div class="row justify-content-center">

        <div class="col-md-6">

            <form action="/movies/{{id}}" method="POST">
                <div class="form-group">
                    <label for="title">Título</label>
                    <input type="text" class="form-control" id="title" name="title">
                </div>
                <div class="form-group">
                    <label for="genre">Género</label>
                    <input type="text" class="form-control" id="genre" name="genre">
                </div>
                <div class="form-group">
                    <label for="plot">Argumento</label>
                    <input type="text" class="form-control" id="plot" name="plot">
                </div>
                <div class="form-group">
                    <label for="cast">Casting</label>
                    <select name="cast" id="cast">
                        {{#each cast}}
                        <option value="{{_id}}">{{name}}</option>
                        {{/each}}
                    </select>
                </div>

                <button type="submit" class="btn btn-dark btn-block">Guardar película</button>
            </form>
        </div>
    </div>
</div>

<hr>
<a href="/movies" class="btn btn-dark">Volver</a>
</div>